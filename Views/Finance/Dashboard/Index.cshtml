@{
    ViewData["Title"] = "Finance Dashboard";
    Layout = "~/Views/Shared/_FinanceLayout.cshtml";
}

<div class="container-fluid px-4">
    <!-- Dashboard Header -->
    <div class="d-flex justify-content-between align-items-center py-4">
        <div>
            <h1 class="h2 fw-bold">💰 Finance Dashboard</h1>
            <p class="text-muted mb-0">Welcome, @User.Identity?.Name</p>
        </div>
        <div>
            <span class="badge bg-success fs-6 px-3 py-2">FINANCE OFFICER</span>
        </div>
    </div>

    <!-- Finance Quick Stats -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-primary border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">To Process</h6>
                            <h3 class="fw-bold">₱@(((decimal?)ViewBag.TotalToProcess ?? 0m).ToString("N2"))</h3>
                            <p class="mb-0 text-muted">@((int?)ViewBag.PendingCount ?? 0) Approved Expenses</p>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-clock text-primary fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-success border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Processed Today</h6>
                            <h3 class="fw-bold">₱8,300</h3>
                            <p class="mb-0 text-muted">5 Reimbursements</p>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="bi bi-check-circle text-success fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-warning border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Monthly Total</h6>
                            <h3 class="fw-bold">₱45,200</h3>
                            <p class="mb-0 text-muted">32 Reimbursements</p>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                            <i class="bi bi-cash-stack text-warning fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-info border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">PayMongo Ready</h6>
                            <h3 class="fw-bold">✅</h3>
                            <p class="mb-0 text-muted">API Connected</p>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded">
                            <i class="bi bi-credit-card text-info fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Finance Quick Actions -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <h4 class="mb-3">⚡ Finance Actions</h4>
            <div class="row g-3">
                <div class="col-md-4">
                    <a href="@Url.Action("Reimbursements", "Finance")" class="card text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-wallet2 text-primary fs-2"></i>
                            </div>
                            <h5 class="card-title">Process Reimbursements</h5>
                            <p class="card-text text-muted small">Send payments via PayMongo</p>
                        </div>
                    </a>
                </div>

                <div class="col-md-4">
                    <a href="@Url.Action("Payments", "Finance")" class="card text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-check2-circle text-success fs-2"></i>
                            </div>
                            <h5 class="card-title">Payment History</h5>
                            <p class="card-text text-muted small">View all transactions</p>
                        </div>
                    </a>
                </div>

                <div class="col-md-4">
                    <a href="@Url.Action("Reports", "Finance")" class="card text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-file-earmark-bar-graph text-warning fs-2"></i>
                            </div>
                            <h5 class="card-title">Financial Reports</h5>
                            <p class="card-text text-muted small">Generate statements</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Reimbursements -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">📋 Pending Reimbursements</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Driver</th>
                            <th>Amount</th>
                            <th>Approved By</th>
                            <th>Date Approved</th>
                            <th>Payment Method</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var reports = ViewBag.Reports as List<CEMS.Models.PendingExpenseReportDto> ?? new List<CEMS.Models.PendingExpenseReportDto>();
                        }
                        @foreach(var dto in reports)
                        {
                            var r = dto.Report;
                            <tr>
                                <td>@(dto.UserName ?? "Unknown")</td>
                                <td>₱@r.TotalAmount.ToString("N2")</td>
                                <td>Manager</td>
                                <td>@r.SubmissionDate.ToLocalTime().ToString("MMM d, yyyy")</td>
                                <td>
                                    <form method="post" asp-action="Reimburse" asp-controller="Finance">
                                        @Html.AntiForgeryToken()
                                        <select name="method" class="form-select form-select-sm d-inline-block" style="width:140px;">
                                            <option>GCash</option>
                                            <option>PayMaya</option>
                                            <option>Bank Transfer</option>
                                        </select>
                                        <input type="hidden" name="id" value="@r.Id" />
                                        <button class="btn btn-sm btn-success">✅ Process</button>
                                    </form>
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-info" href="@Url.Action("ReportDetails","Finance", new { id = r.Id })">👁 Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<style>
    .hover-shadow:hover {
        transform: translateY(-2px);
        transition: all 0.3s ease;
    }</style>