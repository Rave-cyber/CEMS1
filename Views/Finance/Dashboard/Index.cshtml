                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Driver</th>
                            <th>Amount</th>
                            <th>Approved By</th>
                            <th>Date Approved</th>
                            <th>Payment Method</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var reports = ViewBag.Reports as List<CEMS.Models.PendingExpenseReportDto> ?? new List<CEMS.Models.PendingExpenseReportDto>();
                        }
                        @foreach(var dto in reports)
                        {
                            var r = dto.Report;
                            <tr>
                                <td>@(dto.UserName ?? "Unknown")</td>
                                <td>₱@r.TotalAmount.ToString("N2")</td>
                                <td>Manager</td>
                                <td>@r.SubmissionDate.ToLocalTime().ToString("MMM d, yyyy")</td>
                                <td>
                                    <form method="post" asp-action="Reimburse" asp-controller="Finance">
                                        @Html.AntiForgeryToken()
                                        <select name="method" class="form-select form-select-sm d-inline-block" style="width:140px;">
                                            <option>GCash</option>
                                            <option>PayMaya</option>
                                            <option>Bank Transfer</option>
                                        </select>
                                        <input type="hidden" name="id" value="@r.Id" />
                                        <button class="btn btn-sm btn-success">✅ Process</button>
                                    </form>
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-info" href="@Url.Action("ReportDetails","Finance", new { id = r.Id })">👁 Details</a>
