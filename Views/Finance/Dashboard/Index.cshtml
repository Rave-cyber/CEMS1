@{
    ViewData["Title"] = "Finance Dashboard";
    Layout = "~/Views/Shared/_FinanceLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    :root {
        --d-primary: #1a6bb5;
        --d-accent: #2ec4b6;
        --d-bg: #f7fbfc;
        --d-card: #ffffff;
        --d-border: #e9eef6;
        --d-text: #0f1724;
        --d-muted: #6b7280;
        --d-radius: 8px;
        --d-radius-sm: 6px;
    }

    .dash-wrapper {
        background: var(--d-bg);
        min-height: calc(100vh - 60px);
        padding: 12px 0 16px;
    }

    /* ── Header ── */
    .dash-header {
        margin-bottom: 10px;
    }
    .dash-greeting {
        font-size: 1.65rem;
        font-weight: 700;
        color: var(--d-text);
    }
    .dash-greeting span {
        color: var(--d-primary);
        font-weight: 700;
    }
    .dash-date {
        color: var(--d-muted);
        font-size: .92rem;
        margin-top: 2px;
    }

    /* ── Stat Cards ── */
    .stat-card {
        background: var(--d-card);
        border: 1px solid var(--d-border);
        border-radius: 8px;
        padding: 10px 12px;
        display: flex;
        align-items: center;
        gap: 10px;
        transition: transform .08s ease;
        text-decoration: none !important;
        color: inherit !important;
    }
    .stat-card:hover { transform: translateY(-2px); }
    .stat-icon {
        width: 44px;
        height: 44px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
        flex-shrink: 0;
    }
    .stat-icon--pending  { background: rgba(26,107,181,.06);  color: #1a6bb5; }
    .stat-icon--approved { background: rgba(16,185,129,.06);  color: #10b981; }
    .stat-icon--money    { background: rgba(99,102,241,.06);  color: #6366f1; }
    .stat-icon--warning  { background: rgba(245,158,11,.06);  color: #f59e0b; }
    .stat-label {
        font-size: .78rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: .5px;
        color: var(--d-muted);
        margin-bottom: 4px;
    }
    .stat-value {
        font-size: 1.6rem;
        font-weight: 700;
        color: var(--d-text);
        line-height: 1.2;
    }
    .stat-sub {
        font-size: .82rem;
        color: var(--d-muted);
        margin-top: 2px;
    }

    /* ── Section Cards ── */
    .dash-card {
        background: var(--d-card);
        border: 1px solid var(--d-border);
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 10px;
    }
    .dash-card-head {
        padding: 8px 12px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 1px solid var(--d-border);
    }
    .dash-card-title {
        font-size: .98rem;
        font-weight: 600;
        color: var(--d-text);
        display: flex;
        align-items: center;
        gap: 8px;
        margin: 0;
    }
    .dash-card-title i { color: var(--d-primary); font-size: 1.1rem; }
    .dash-card-body { padding: 8px 12px; }

    /* ── Chart ── */
    .chart-wrap {
        height: 200px;
    }
    .chart-wrap canvas {
        width: 100% !important;
        height: 100% !important;
    }

    /* ── Filter Card ── */
    .filter-card {
        background: var(--d-card);
        border: 1px solid var(--d-border);
        border-radius: 8px;
        padding: 8px 10px;
        margin-bottom: 8px;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 8px 10px;
    }
    .filter-card label {
        font-size: .78rem;
        font-weight: 600;
        color: var(--d-muted);
        margin-bottom: 2px;
    }
    .filter-card input {
        border: 1px solid var(--d-border);
        border-radius: 6px;
        padding: 6px 8px;
        font-size: .85rem;
        color: var(--d-text);
    }
    .filter-actions .btn {
        font-size: .86rem;
        font-weight: 600;
        border-radius: 6px;
        padding: 6px 14px;
    }

    @@media (max-width: 768px) {
        .dash-wrapper { padding: 20px 0 32px; }
        .stat-card { padding: 18px; }
        .dash-card-body { padding: 16px 18px; }
        .filter-card { flex-direction: column; }
        .filter-card input,
        .filter-actions .btn { width: 100%; }
    }
</style>

<div class="dash-wrapper">
    <div class="container-fluid px-4">

        <!-- ── Header ── -->
        <div class="dash-header d-flex justify-content-between align-items-end flex-wrap gap-2">
            <div>
                <h1 class="dash-greeting">Welcome back, <span>@User.Identity?.Name</span></h1>
                <p class="dash-date mb-0">
                    <i class="bi bi-calendar3 me-1"></i>
                    @DateTime.Now.ToString("dddd, MMMM d yyyy")
                </p>
            </div>
        </div>

        <!-- ── Filter Card ── -->
        <div class="filter-card">
            <div style="display:flex;gap:8px;align-items:center;flex-wrap:wrap;justify-content:space-between;">
                <div style="display:flex;gap:8px;align-items:flex-end;flex-wrap:wrap;">
                    <div style="flex:1;min-width:160px;">
                        <label for="filterStart">From</label>
                        <input type="date" id="filterStart" value="@((string)ViewBag.FilterStart ?? DateTime.UtcNow.ToString("yyyy-MM-01"))" />
                    </div>
                    <div style="flex:1;min-width:160px;">
                        <label for="filterEnd">To</label>
                        <input type="date" id="filterEnd" value="@((string)ViewBag.FilterEnd ?? DateTime.UtcNow.ToString("yyyy-MM-dd"))" />
                    </div>
                </div>
                <div style="display:flex;gap:8px;align-items:center;">
                    <div class="quick-filter">
                        <button type="button" class="btn btn-outline-secondary btn-sm" data-range="today">Today</button>
                        <button type="button" class="btn btn-outline-secondary btn-sm" data-range="week">Week</button>
                        <button type="button" class="btn btn-outline-secondary btn-sm" data-range="month">Month</button>
                        <button type="button" class="btn btn-outline-secondary btn-sm" data-range="year">Year</button>
                    </div>
                    <a href="@Url.Action("Reimbursements", "Finance")" class="btn text-white btn-sm" style="background:var(--d-primary);border:none;border-radius:var(--d-radius-sm);font-weight:600;padding:8px 12px;">
                        <i class="bi bi-plus-lg me-1"></i> Process Reimbursement
                    </a>
                </div>
            </div>
        </div>

        <!-- ── Stats Row ── -->
        <div class="row g-3 mb-4">
            <div class="col-xl-3 col-sm-6">
                <a href="@Url.Action("ApprovedReports", "Finance")" class="stat-card">
                    <div class="stat-icon stat-icon--pending">
                        <i class="bi bi-hourglass-split"></i>
                    </div>
                    <div>
                        <div class="stat-label">To Process</div>
                        <div class="stat-value">₱<span id="toProcessVal">@(((decimal?)ViewBag.TotalToProcess ?? 0m).ToString("0.00"))</span></div>
                        <div class="stat-sub">@((int?)ViewBag.PendingCount ?? 0) reports</div>
                    </div>
                </a>
            </div>
            <div class="col-xl-3 col-sm-6">
                <a href="@Url.Action("Payments", "Finance")" class="stat-card">
                    <div class="stat-icon stat-icon--approved">
                        <i class="bi bi-check2-circle"></i>
                    </div>
                    <div>
                        <div class="stat-label">Processed Today</div>
                        <div class="stat-value">₱<span id="processedVal">@(((decimal?)ViewBag.ProcessedTodayTotal ?? 0m).ToString("0.00"))</span></div>
                        <div class="stat-sub"><span id="processedCount">@((int?)ViewBag.ProcessedTodayCount ?? 0)</span> transactions</div>
                    </div>
                </a>
            </div>
            <div class="col-xl-3 col-sm-6">
                <div class="stat-card">
                    <div class="stat-icon stat-icon--money">
                        <i class="bi bi-cash-coin"></i>
                    </div>
                    <div>
                        <div class="stat-label">Month Total</div>
                        <div class="stat-value">₱<span id="monthlyVal">@(((decimal?)ViewBag.MonthlyTotal ?? 0m).ToString("0.00"))</span></div>
                        <div class="stat-sub"><span id="monthlyCount">@((int?)ViewBag.MonthlyCount ?? 0)</span> processed</div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-sm-6">
                <div class="stat-card">
                    <div class="stat-icon stat-icon--warning">
                        <i class="bi bi-credit-card"></i>
                    </div>
                    <div>
                        <div class="stat-label">Payment Status</div>
                        <div class="stat-value" style="color:#10b981;font-size:1.35rem;">✓</div>
                        <div class="stat-sub">Gateway Ready</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ── Charts Row ── -->
        <div class="row g-3 mb-4">
            <div class="col-lg-6">
                <div class="dash-card">
                    <div class="dash-card-head">
                        <h4 class="dash-card-title">
                            <i class="bi bi-bar-chart"></i> Reimbursement Trend
                        </h4>
                    </div>
                    <div class="dash-card-body">
                        <div class="chart-wrap">
                            <canvas id="financeTrendChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="dash-card">
                    <div class="dash-card-head">
                        <h4 class="dash-card-title">
                            <i class="bi bi-pie-chart"></i> Expense Categories
                        </h4>
                    </div>
                    <div class="dash-card-body">
                        <div class="chart-wrap">
                            <canvas id="categoryChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ── Monthly Breakdown ── -->
        <div class="dash-card">
            <div class="dash-card-head">
                <h4 class="dash-card-title">
                    <i class="bi bi-clipboard-data"></i> Monthly Analytics
                </h4>
            </div>
            <div class="dash-card-body">
                <div id="monthlyBreakdown" style="min-height:120px;">
                    <p class="text-center py-4" style="color:var(--d-muted);font-size:.9rem;">Loading analytics...</p>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
<script>
let financeTrendChart;

function renderFinanceTrendChart(toProcess, processedToday, monthlyTotal){
    const canvas = document.getElementById('financeTrendChart');
    if(!canvas || !window.Chart) return;

    if(financeTrendChart) financeTrendChart.destroy();

    financeTrendChart = new Chart(canvas, {
        type: 'bar',
        data: {
            labels: ['To Process', 'Processed Today', 'Monthly Total'],
            datasets: [{
                label: 'Amount (₱)',
                data: [toProcess, processedToday, monthlyTotal],
                backgroundColor: ['rgba(26,107,181,0.25)', 'rgba(16,185,129,0.25)', 'rgba(99,102,241,0.25)'],
                borderColor: ['#1a6bb5', '#10b981', '#6366f1'],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { display: false } },
            scales: { y: { beginAtZero: true } }
        }
    });
}

let categoryChart;
function renderCategoryChart(categories){
    const canvas = document.getElementById('categoryChart');
    if(!canvas || !window.Chart) return;
    const labels = categories.map(c => c.category || c.Category);
    const data = categories.map(c => parseFloat((c.total || c.Total || 0).toString()));
    if(categoryChart) categoryChart.destroy();
    categoryChart = new Chart(canvas, {
        type: 'doughnut',
        data: { 
            labels, 
            datasets: [{ 
                data, 
                backgroundColor: ['#1a6bb5','#2ec4b6','#6366f1','#f59e0b','#ef4444','#10b981','#8b5cf6','#f97316']
            }] 
        },
        options: { responsive:true, maintainAspectRatio:false, plugins:{legend:{position:'right'}} }
    });
}

function renderMonthlyBreakdown(monthlyData, categories) {
    const el = document.getElementById('monthlyBreakdown');
    if (!el) return;
    if ((!monthlyData || monthlyData.length === 0) && (!categories || categories.length === 0)) {
        el.innerHTML = '<p class="text-center py-4" style="color:var(--d-muted);font-size:.9rem;">No data available for the selected period.</p>';
        return;
    }
    let html = '<div class="row g-4">';
    html += '<div class="col-md-6"><h6 style="font-size:.85rem;font-weight:700;color:var(--d-text);margin-bottom:14px;">Monthly Totals</h6><table style="width:100%;font-size:.88rem;"><thead><tr style="border-bottom:2px solid var(--d-border);"><th style="padding:8px;color:var(--d-muted);font-weight:600;">Month</th><th style="padding:8px;color:var(--d-muted);font-weight:600;text-align:right;">Amount</th></tr></thead><tbody>';
    (monthlyData || []).forEach(function(m) {
        html += '<tr style="border-bottom:1px solid #f1f5f9;"><td style="padding:10px 8px;">' + m.label + '</td><td style="padding:10px 8px;text-align:right;font-weight:600;">₱' + (m.total || 0).toFixed(2) + '</td></tr>';
    });
    html += '</tbody></table></div>';
    html += '<div class="col-md-6"><h6 style="font-size:.85rem;font-weight:700;color:var(--d-text);margin-bottom:14px;">Top Categories</h6><table style="width:100%;font-size:.88rem;"><thead><tr style="border-bottom:2px solid var(--d-border);"><th style="padding:8px;color:var(--d-muted);font-weight:600;">Category</th><th style="padding:8px;color:var(--d-muted);font-weight:600;text-align:right;">Total</th></tr></thead><tbody>';
    (categories || []).forEach(function(c) {
        html += '<tr style="border-bottom:1px solid #f1f5f9;"><td style="padding:10px 8px;">' + (c.category || c.Category) + '</td><td style="padding:10px 8px;text-align:right;font-weight:600;">₱' + parseFloat(c.total || c.Total || 0).toFixed(2) + '</td></tr>';
    });
    html += '</tbody></table></div></div>';
    el.innerHTML = html;
}

async function loadFinanceMetrics(){
    try{
        const res = await fetch('@Url.Action("Metrics","Finance")');
        const data = await res.json();
        document.getElementById('processedVal').textContent = ((data.processedToday ?? 0).toFixed(2));
        document.getElementById('processedCount').textContent = (data.processedCount ?? 0);
        document.getElementById('monthlyVal').textContent = ((data.monthlyTotal ?? 0).toFixed(2));
        document.getElementById('monthlyCount').textContent = (data.monthlyCount ?? 0);

        const toProcess = Number('@(((decimal?)ViewBag.TotalToProcess ?? 0m).ToString(System.Globalization.CultureInfo.InvariantCulture))');
        renderFinanceTrendChart(toProcess, data.processedToday ?? 0, data.monthlyTotal ?? 0);
        renderCategoryChart(data.categories || []);
        renderMonthlyBreakdown(data.monthlyData || [], data.categories || []);
    }catch(e){
        console.error('Failed to load metrics:', e);
    }
}

document.addEventListener('DOMContentLoaded', function(){
    // initial load
    loadFinanceMetrics();

    // auto-apply when date inputs change
    ['filterStart','filterEnd'].forEach(function(id){
        var el = document.getElementById(id);
        if(!el) return;
        el.addEventListener('change', function(){
            if(window._debFilter) clearTimeout(window._debFilter);
            window._debFilter = setTimeout(loadFinanceMetrics, 250);
        });
    });

    // quick-range buttons
    document.querySelectorAll('.quick-filter [data-range]').forEach(function(btn){
        btn.addEventListener('click', function(){
            var range = btn.getAttribute('data-range');
            var now = new Date();
            var start;
            if(range === 'today') start = new Date(now.getFullYear(), now.getMonth(), now.getDate());
            else if(range === 'week') start = new Date(now.getFullYear(), now.getMonth(), now.getDate() - now.getDay());
            else if(range === 'month') start = new Date(now.getFullYear(), now.getMonth(), 1);
            else if(range === 'year') start = new Date(now.getFullYear(), 0, 1);

            var s = document.getElementById('filterStart');
            var e = document.getElementById('filterEnd');
            if(s && start) s.value = start.toISOString().slice(0,10);
            if(e) e.value = now.toISOString().slice(0,10);
            setTimeout(loadFinanceMetrics, 150);
        });
    });
});
</script>