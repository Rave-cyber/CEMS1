@{
    ViewData["Title"] = "Manager Dashboard";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="container-fluid px-4">
    <!-- Dashboard Header -->
    <div class="d-flex justify-content-between align-items-center py-4">
        <div>
            <h1 class="h2 fw-bold">👔 Manager Dashboard</h1>
            <p class="text-muted mb-0">Welcome, @User.Identity?.Name</p>
        </div>

    <script>
        async function loadManagerMetrics(){
            try{
                const res = await fetch('@Url.Action("Metrics","Manager")');
                const data = await res.json();
                document.getElementById('mgrPendingCount').textContent = data.totalPending ?? 0;
                document.getElementById('mgrOverBudget').textContent = data.overBudgetCount ?? 0;
                document.getElementById('mgrApproved').textContent = '₱' + ((data.approved ?? 0).toFixed ? data.approved.toFixed(2) : Number(data.approved).toFixed(2));
                // budgets display
                const container = document.getElementById('budgetOverview');
                if(container && data.budgets){
                    container.innerHTML = '';
                    for(const b of data.budgets){
                        const percent = b.Allocated === 0 ? 0 : Math.min(100, Math.round((b.Spent / b.Allocated) * 100));
                        const div = document.createElement('div');
                        div.className = 'mb-2';
                        div.innerHTML = `<div class="d-flex justify-content-between"><div>${b.Category}</div><div>₱${b.Spent.toFixed(2)} / ₱${b.Allocated.toFixed(2)}</div></div><div class="progress"><div class="progress-bar" role="progressbar" style="width:${percent}%" aria-valuenow="${percent}" aria-valuemin="0" aria-valuemax="100">${percent}%</div></div>`;
                        container.appendChild(div);
                    }
                }
            }catch(e){ console.error(e); }
        }

        document.addEventListener('DOMContentLoaded', loadManagerMetrics);
    </script>
        <div>
            <span class="badge bg-warning fs-6 px-3 py-2">MANAGER</span>
        </div>
    </div>

    <!-- Manager Quick Stats -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-primary border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Pending Review</h6>
                            <h3 class="fw-bold" id="mgrPendingCount">-</h3>
                            <p class="mb-0 text-muted">Expense Requests</p>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-clock text-primary fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-light">Current Budget Usage</div>
                <div class="card-body">
                    <div id="budgetOverview">Loading...</div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-light">Overview</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <h6>Over-Budget Reports</h6>
                            <h3 id="mgrOverBudget">0</h3>
                        </div>
                        <div class="col-6">
                            <h6>Approved Total</h6>
                            <h3 id="mgrApproved">₱0.00</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-success border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Approved Today</h6>
                            <h3 class="fw-bold">₱3,200</h3>
                            <p class="mb-0 text-muted">3 Expenses</p>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="bi bi-check-circle text-success fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-warning border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Team Budget</h6>
                            <h3 class="fw-bold">₱15,000</h3>
                            <p class="mb-0 text-muted">Monthly Limit</p>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                            <i class="bi bi-cash text-warning fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-info border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">My Drivers</h6>
                            <h3 class="fw-bold">6</h3>
                            <p class="mb-0 text-muted">Active Drivers</p>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded">
                            <i class="bi bi-people text-info fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Manager Quick Actions -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <h4 class="mb-3">⚡ Manager Actions</h4>
            <div class="row g-3">
                <div class="col-md-3">
                    <a href="@Url.Action("Expenses", "Manager")" class="card text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-list-check text-primary fs-2"></i>
                            </div>
                            <h5 class="card-title">Review Expenses</h5>
                            <p class="card-text text-muted small">Approve/Reject submissions</p>
                        </div>
                    </a>
                </div>

                <div class="col-md-3">
                    <a href="@Url.Action("Team", "Manager")" class="card text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-truck text-success fs-2"></i>
                            </div>
                            <h5 class="card-title">Team Monitoring</h5>
                            <p class="card-text text-muted small">View driver expenses</p>
                        </div>
                    </a>
                </div>

                <div class="col-md-3">
                    <a href="@Url.Action("Budget", "Manager")" class="card text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-pie-chart text-warning fs-2"></i>
                            </div>
                            <h5 class="card-title">Budget Overview</h5>
                            <p class="card-text text-muted small">Track spending</p>
                        </div>
                    </a>
                </div>

                <div class="col-md-3">
                    <a href="#" class="card text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-flag text-info fs-2"></i>
                            </div>
                            <h5 class="card-title">Escalate</h5>
                            <p class="card-text text-muted small">Flag over-budget to CEO</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Expense Reports Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">📋 Expense Reports Pending Your Approval</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Driver</th>
                            <th>Total Amount</th>
                            <th>Submitted</th>
                            <th>Budget Check</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var pendingReports = ViewBag.PendingReports as List<CEMS.Models.PendingExpenseReportDto> ?? new List<CEMS.Models.PendingExpenseReportDto>();
                        }
                        @foreach(var item in pendingReports)
                        {
                            var report = item.Report;
                            <tr>
                                <td>@(item.UserName ?? "Unknown")</td>
                                <td>₱@report.TotalAmount.ToString("N2")</td>
                                <td>@report.SubmissionDate.ToLocalTime().ToString("MMM d, yyyy")</td>
                                <td>
                                    <span class="badge @(report.BudgetCheck == CEMS.Models.BudgetCheckStatus.WithinBudget ? "bg-success" : "bg-danger")">
                                        @report.BudgetCheck
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(report.Status == CEMS.Models.ReportStatus.Submitted ? "bg-warning" : report.Status == CEMS.Models.ReportStatus.Approved ? "bg-success" : "bg-danger")">
                                        @report.Status
                                    </span>
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-info" href="@Url.Action("ReportDetails", "Manager", new { id = report.Id })">👁 Details</a>
                                    <form method="post" asp-action="ApproveReport" asp-controller="Manager" style="display:inline-block; margin-left:6px;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@report.Id" />
                                        <button class="btn btn-sm btn-success">✓ Approve</button>
                                    </form>
                                    <form method="post" asp-action="RejectReport" asp-controller="Manager" style="display:inline-block; margin-left:6px;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@report.Id" />
                                        <button class="btn btn-sm btn-danger">✗ Reject</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<style>.hover-shadow:hover { transform: translateY(-2px); transition: all 0.3s ease; }</style>