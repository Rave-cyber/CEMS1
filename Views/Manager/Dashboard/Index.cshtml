@{
    ViewData["Title"] = "Manager Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <!-- Dashboard Header -->
    <div class="d-flex justify-content-between align-items-center py-4">
        <div>
            <h1 class="h2 fw-bold">👔 Manager Dashboard</h1>
            <p class="text-muted mb-0">Welcome, @User.Identity?.Name</p>
        </div>
        <div>
            <span class="badge bg-warning fs-6 px-3 py-2">MANAGER</span>
        </div>
    </div>

    <!-- Manager Quick Stats -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-primary border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Pending Review</h6>
                            <h3 class="fw-bold">5</h3>
                            <p class="mb-0 text-muted">Expense Requests</p>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-clock text-primary fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-success border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Approved Today</h6>
                            <h3 class="fw-bold">₱3,200</h3>
                            <p class="mb-0 text-muted">3 Expenses</p>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="bi bi-check-circle text-success fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-warning border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Team Budget</h6>
                            <h3 class="fw-bold">₱15,000</h3>
                            <p class="mb-0 text-muted">Monthly Limit</p>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                            <i class="bi bi-cash text-warning fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-info border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">My Drivers</h6>
                            <h3 class="fw-bold">6</h3>
                            <p class="mb-0 text-muted">Active Drivers</p>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded">
                            <i class="bi bi-people text-info fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Manager Quick Actions -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <h4 class="mb-3">⚡ Manager Actions</h4>
            <div class="row g-3">
                <div class="col-md-3">
                    <a href="@Url.Action("Expenses", "Manager")" class="card text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-list-check text-primary fs-2"></i>
                            </div>
                            <h5 class="card-title">Review Expenses</h5>
                            <p class="card-text text-muted small">Approve/Reject submissions</p>
                        </div>
                    </a>
                </div>

                <div class="col-md-3">
                    <a href="@Url.Action("Team", "Manager")" class="card text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-truck text-success fs-2"></i>
                            </div>
                            <h5 class="card-title">Team Monitoring</h5>
                            <p class="card-text text-muted small">View driver expenses</p>
                        </div>
                    </a>
                </div>

                <div class="col-md-3">
                    <a href="@Url.Action("Budget", "Manager")" class="card text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-pie-chart text-warning fs-2"></i>
                            </div>
                            <h5 class="card-title">Budget Overview</h5>
                            <p class="card-text text-muted small">Track spending</p>
                        </div>
                    </a>
                </div>

                <div class="col-md-3">
                    <a href="#" class="card text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-flag text-info fs-2"></i>
                            </div>
                            <h5 class="card-title">Escalate</h5>
                            <p class="card-text text-muted small">Flag over-budget to CEO</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Expenses Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">📋 Expenses Pending Your Approval</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Driver</th>
                            <th>Category</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var pending = ViewBag.Pending as List<CEMS.Models.PendingExpenseDto> ?? new List<CEMS.Models.PendingExpenseDto>();
                        }
                        @foreach(var item in pending)
                        {
                            var e = item.Expense;
                            <tr>
                                <td>@(item.UserName ?? "Unknown")</td>
                                <td><span class="badge @(e.Status == CEMS.Models.ExpenseStatus.Pending ? "bg-primary" : e.Status == CEMS.Models.ExpenseStatus.Approved ? "bg-success" : "bg-danger")">@e.Category</span></td>
                                <td>₱@e.Amount</td>
                                <td>@e.Date.ToLocalTime().ToString("MMM d, yyyy")</td>
                                <td><span class="badge @(e.Status == CEMS.Models.ExpenseStatus.Pending ? "bg-warning" : e.Status == CEMS.Models.ExpenseStatus.Approved ? "bg-success" : "bg-danger")">@e.Status</span></td>
                                <td>
                                    <form method="post" asp-action="Approve" asp-controller="Manager" style="display:inline-block;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@e.Id" />
                                        <button class="btn btn-sm btn-success">✓ Approve</button>
                                    </form>
                                    <form method="post" asp-action="Reject" asp-controller="Manager" style="display:inline-block; margin-left:6px;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@e.Id" />
                                        <button class="btn btn-sm btn-danger">✗ Reject</button>
                                    </form>
                                    @if(e.ReceiptData != null && e.ReceiptData.Length > 0)
                                    {
                                        <a class="btn btn-sm btn-info" href="@Url.Action("Receipt","Driver", new { id = e.Id })" target="_blank">👁 View</a>
                                    }
                                    else if (!string.IsNullOrEmpty(e.ReceiptPath))
                                    {
                                        <a class="btn btn-sm btn-info" href="@e.ReceiptPath" target="_blank">👁 View</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<style>.hover-shadow:hover { transform: translateY(-2px); transition: all 0.3s ease; }</style>