@{
    ViewData["Title"] = "Expenses";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="container py-4">
    <h2>Expenses</h2>

    <p class="text-muted">List of expenses will appear here.</p>

    @if (ViewBag.RecentExpenses != null)
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Amount</th>
                        <th>Description</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var e in ViewBag.RecentExpenses as IEnumerable<CEMS.Models.Expense> ?? Enumerable.Empty<CEMS.Models.Expense>())
                {
                    <tr>
                        <td>@e.Date.ToLocalTime().ToString("yyyy-MM-dd")</td>
                        <td>@e.Category</td>
                        <td>@e.Amount</td>
                        <td>@e.Description</td>
                        <td>@e.Status</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">No expenses to show.</div>
    }
</div>
