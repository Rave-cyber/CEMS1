<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CEMS Finance</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @{ 
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
        Func<string, string, string> active = (c, a) =>
        {
            if (string.Equals(c, currentController, System.StringComparison.OrdinalIgnoreCase) &&
                string.Equals(a, currentAction, System.StringComparison.OrdinalIgnoreCase))
            {
                return "active";
            }
            return string.Empty;
        };
    }

    <header>
        <!-- Mobile Header with Hamburger Menu -->
        <div class="mobile-header d-md-none">
            <button class="mobile-menu-btn" id="mobileMenuBtn" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas" aria-controls="sidebarOffcanvas" aria-label="Toggle navigation">
                â˜°
            </button>
            <div class="brand p-3 d-flex align-items-center">
                <a class="d-flex align-items-center text-decoration-none" asp-controller="Finance" asp-action="Dashboard">
                    <img src="@(Url.Content("~/images/logo.png"))" alt="CEMS" class="driver-logo me-2" />
                    <span class="fw-bold">CEMS</span>
                </a>
            </div>
        </div>

        <!-- Desktop Sidebar -->
        <aside class="driver-sidebar d-none d-md-flex flex-column">
            <div class="brand p-3 d-flex align-items-center">
                <a class="d-flex align-items-center text-decoration-none" asp-controller="Finance" asp-action="Dashboard">
                    <img src="@(Url.Content("~/images/logo.png"))" alt="CEMS" class="driver-logo me-2" />
                    <span class="fw-bold">CEMS</span>
                </a>
            </div>
            <nav class="nav flex-column p-3">
                <a class="nav-link driver-nav-link @(active("Finance","Dashboard"))" asp-controller="Finance" asp-action="Dashboard">
                    <i class="bi bi-speedometer2"></i>
                    <span>Dashboard</span>
                    <i class="bi bi-check-circle nav-indicator"></i>
                </a>
                <a class="nav-link driver-nav-link @(active("Finance","ApprovedReports"))" asp-controller="Finance" asp-action="ApprovedReports">
                    <i class="bi bi-check2-circle"></i>
                    <span>Approved Reports</span>
                    <i class="bi bi-check-circle nav-indicator"></i>
                </a>
                <a class="nav-link driver-nav-link @(active("Finance","Reimbursements"))" asp-controller="Finance" asp-action="Reimbursements">
                    <i class="bi bi-arrow-left-right"></i>
                    <span>Reimbursements</span>
                    <i class="bi bi-check-circle nav-indicator"></i>
                </a>
                <a class="nav-link driver-nav-link @(active("Finance","Payments"))" asp-controller="Finance" asp-action="Payments">
                    <i class="bi bi-credit-card"></i>
                    <span>Payment History</span>
                    <i class="bi bi-check-circle nav-indicator"></i>
                </a>
            </nav>
            <div class="mt-auto profile-section">
                <div class="dropdown">
                    <button class="btn btn-link profile-btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle"></i>
                        <span class="profile-name">@(User.Identity?.Name ?? "User")</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">View Profile</a></li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><partial name="_LoginPartial" /></li>
                    </ul>
                </div>
            </div>
        </aside>

        <!-- Mobile Offcanvas Sidebar -->
        <div class="offcanvas offcanvas-start d-md-none" tabindex="-1" id="sidebarOffcanvas" aria-labelledby="sidebarOffcanvasLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="sidebarOffcanvasLabel">CEMS Finance</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body p-0 d-flex flex-column">
                <nav class="nav flex-column p-3">
                    <a class="nav-link driver-nav-link @(active("Finance","Dashboard"))" asp-controller="Finance" asp-action="Dashboard" data-bs-dismiss="offcanvas">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                        <i class="bi bi-check-circle nav-indicator"></i>
                    </a>
                    <a class="nav-link driver-nav-link @(active("Finance","ApprovedReports"))" asp-controller="Finance" asp-action="ApprovedReports" data-bs-dismiss="offcanvas">
                        <i class="bi bi-check2-circle"></i>
                        <span>Approved Reports</span>
                        <i class="bi bi-check-circle nav-indicator"></i>
                    </a>
                    <a class="nav-link driver-nav-link @(active("Finance","Reimbursements"))" asp-controller="Finance" asp-action="Reimbursements" data-bs-dismiss="offcanvas">
                        <i class="bi bi-arrow-left-right"></i>
                        <span>Reimbursements</span>
                        <i class="bi bi-check-circle nav-indicator"></i>
                    </a>
                    <a class="nav-link driver-nav-link @(active("Finance","Payments"))" asp-controller="Finance" asp-action="Payments" data-bs-dismiss="offcanvas">
                        <i class="bi bi-credit-card"></i>
                        <span>Payment History</span>
                        <i class="bi bi-check-circle nav-indicator"></i>
                    </a>
                </nav>
                <div class="mt-auto p-3 border-top">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </header>
    <div class="w-100">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - CEMS Finance
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
