@{
    ViewData["Title"] = "CEMS - Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CEMS - Expense Management System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-green: #2ec4b6;
            --secondary-green: #20c997;
            --dark-green: #0d8b7d;
            --light-green: #e8f9f7;
            --accent-blue: #1a6bb5;
            --light-blue: #e3f2fd;
            --white: #ffffff;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, rgba(46, 196, 182, 0.15) 0%, rgba(26, 107, 181, 0.1) 25%, rgba(32, 201, 151, 0.15) 50%, rgba(26, 107, 181, 0.1) 75%, rgba(46, 196, 182, 0.15) 100%);
            padding: 20px;
            position: relative;
            overflow-x: hidden;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: radial-gradient(circle at 20% 30%, rgba(46, 196, 182, 0.2) 0%, transparent 50%), radial-gradient(circle at 80% 70%, rgba(26, 107, 181, 0.15) 0%, transparent 50%), radial-gradient(circle at 40% 80%, rgba(32, 201, 151, 0.15) 0%, transparent 50%);
                z-index: -1;
            }

        .container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 80px;
            max-width: 1200px;
            width: 100%;
            align-items: center;
        }

        .left-section {
            padding: 40px;
        }

        .logo {
            font-size: 4.5rem;
            font-weight: 900;
            background: linear-gradient(135deg, var(--accent-blue) 0%, var(--primary-green) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 15px;
            line-height: 1;
            letter-spacing: -1px;
        }

        .tagline {
            font-size: 1.8rem;
            color: var(--dark-green);
            font-weight: 300;
            margin-bottom: 50px;
            opacity: 0.9;
            max-width: 500px;
        }

        .welcome-text {
            font-size: 2.8rem;
            font-weight: 700;
            color: var(--accent-blue);
            margin-bottom: 25px;
            line-height: 1.2;
        }

        .description {
            font-size: 1.2rem;
            color: #2d5d53;
            line-height: 1.8;
            margin-bottom: 45px;
            max-width: 500px;
        }

        .login-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, var(--accent-blue) 0%, var(--primary-green) 100%);
            color: white;
            font-size: 1.4rem;
            font-weight: 600;
            padding: 20px 50px;
            border-radius: 50px;
            text-decoration: none;
            border: none;
            cursor: pointer;
            transition: all 0.4s ease;
            box-shadow: 0 10px 30px rgba(26, 107, 181, 0.25), 0 0 0 3px rgba(46, 196, 182, 0.15);
            position: relative;
            overflow: hidden;
        }

            .login-btn:hover {
                transform: translateY(-5px);
                box-shadow: 0 20px 40px rgba(26, 107, 181, 0.35), 0 0 0 3px rgba(46, 196, 182, 0.25);
                text-decoration: none;
                color: white;
                background: linear-gradient(135deg, var(--primary-green) 0%, var(--accent-blue) 100%);
            }

            .login-btn:active {
                transform: translateY(-2px);
            }

            .login-btn i {
                margin-right: 12px;
                font-size: 1.5rem;
            }

            .login-btn::after {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
                transition: left 0.7s ease;
            }

            .login-btn:hover::after {
                left: 100%;
            }

        .right-section {
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .image-container {
            position: relative;
            width: 100%;
            max-width: 500px;
            aspect-ratio: 1;
            background: linear-gradient(135deg, var(--accent-blue) 0%, var(--primary-green) 100%);
            border-radius: 25px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            box-shadow: 0 25px 60px rgba(26, 107, 181, 0.25), inset 0 0 0 1px rgba(255, 255, 255, 0.2);
        }

            .image-container::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: conic-gradient( transparent, rgba(255, 255, 255, 0.15), transparent 30% );
                animation: rotate 10s linear infinite;
            }

        @@keyframes rotate {
            100% {
                transform: rotate(360deg);
            }
        }

        .expense-image {
            position: relative;
            z-index: 2;
            width: 70%;
            height: 70%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
        }

        .expense-icon {
            font-size: 8rem;
            margin-bottom: 20px;
            filter: drop-shadow(0 5px 15px rgba(0, 0, 0, 0.2));
        }

        .image-text {
            font-size: 1.8rem;
            font-weight: 600;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
        }

        .floating-elements {
            position: absolute;
            width: 100%;
            height: 100%;
            pointer-events: none;
        }

        .floating-element {
            position: absolute;
            background: rgba(232, 249, 247, 0.95);
            border-radius: 10px;
            padding: 10px 15px;
            font-size: 0.9rem;
            font-weight: 500;
            color: var(--accent-blue);
            box-shadow: 0 5px 15px rgba(13, 139, 125, 0.2);
            border: 1px solid rgba(46, 196, 182, 0.3);
            animation: float 6s ease-in-out infinite;
        }

            .floating-element:nth-child(1) {
                top: 20%;
                left: -30px;
                animation-delay: 0s;
                background: rgba(227, 242, 253, 0.95);
                color: var(--accent-blue);
            }

            .floating-element:nth-child(2) {
                top: 60%;
                right: -40px;
                animation-delay: 2s;
                background: rgba(232, 249, 247, 0.95);
                color: var(--dark-green);
            }

            .floating-element:nth-child(3) {
                bottom: 30%;
                left: -50px;
                animation-delay: 4s;
                background: rgba(227, 242, 253, 0.95);
                color: var(--accent-blue);
            }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0) rotate(0deg);
            }

            50% {
                transform: translateY(-20px) rotate(5deg);
            }
        }

        .accent-circle {
            position: absolute;
            width: 300px;
            height: 300px;
            border-radius: 50%;
            opacity: 0.1;
            z-index: -1;
        }

        .green-circle {
            background: radial-gradient(circle, var(--primary-green) 0%, transparent 70%);
            top: 10%;
            right: 10%;
        }

        .blue-circle {
            background: radial-gradient(circle, var(--accent-blue) 0%, transparent 70%);
            bottom: 10%;
            left: 10%;
        }

        @@media (max-width: 992px) {
            .container {
                grid-template-columns: 1fr;
                gap: 60px;
                text-align: center;
            }

            .left-section {
                padding: 20px;
            }

            .logo {
                font-size: 3.5rem;
            }

            .welcome-text {
                font-size: 2.2rem;
            }

            .tagline {
                font-size: 1.5rem;
            }

            .description {
                margin-left: auto;
                margin-right: auto;
                color: #2d5d53;
            }

            .image-container {
                max-width: 400px;
                margin: 0 auto;
            }
        }

        @@media (max-width: 576px) {
            .logo {
                font-size: 2.8rem;
            }

            .welcome-text {
                font-size: 1.8rem;
            }

            .tagline {
                font-size: 1.3rem;
            }

            .description {
                font-size: 1.1rem;
                color: #2d5d53;
            }

            .login-btn {
                padding: 16px 35px;
                font-size: 1.2rem;
            }

            .expense-icon {
                font-size: 6rem;
            }

            .image-text {
                font-size: 1.4rem;
            }

            .image-container {
                max-width: 300px;
            }

            .floating-element {
                display: none;
            }

            .accent-circle {
                width: 200px;
                height: 200px;
            }
        }
    </style>
</head>
<body>
    <div class="accent-circle green-circle"></div>
    <div class="accent-circle blue-circle"></div>

    <div class="container">
        <div class="left-section">
            <div class="logo">CEMS</div>
            <div class="tagline">Expense Management System</div>
            <h1 class="welcome-text">Welcome Back</h1>
            <p class="description">
                Log in to your dashboard to manage your projects, monitor your performance,
                and access all the tools and resources you need to stay ahead.
                Track, analyze, and optimize your expenses with our intelligent system.
            </p>
            <a href="/Identity/Account/Login" class="login-btn">
                <i class="fas fa-sign-in-alt"></i> Login to Dashboard
            </a>
        </div>

        <div class="right-section">
            <div class="image-container">
                <div class="expense-image">
                    <i class="fas fa-chart-pie expense-icon"></i>
                    <div class="image-text">Smart Financial Control</div>
                </div>
            </div>

            <div class="floating-elements">
                <div class="floating-element">📊 Analytics</div>
                <div class="floating-element">💰 Budgeting</div>
                <div class="floating-element">📈 Reports</div>
            </div>
        </div>
    </div>

    <script>
        // Add subtle interactive effect to login button
        document.addEventListener('DOMContentLoaded', function() {
            const loginBtn = document.querySelector('.login-btn');
            const floatingElements = document.querySelectorAll('.floating-element');

            if (loginBtn) {
                loginBtn.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px) scale(1.02)';
                });

                loginBtn.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            }

            // Randomize floating animation delays
            floatingElements.forEach((el, index) => {
                el.style.animationDelay = `${index * 2}s`;
            });
        });
    </script>
</body>
</html>