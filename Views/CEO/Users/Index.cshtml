                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-outline-success btn-sm" title="Activate">
                                                        <i class="bi bi-person-check"></i> Activate
                                                    </button>
                                                }
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-truck fs-1 d-block mb-2"></i>
                        No driver accounts yet. Create one above.
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- ═══════ CEO Tab (read-only) ═══════ -->
    <div class="tab-pane fade @(activeTab == "ceo" ? "show active" : "")" id="ceo" role="tabpanel">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <i class="bi bi-shield-lock"></i> CEO Accounts
            </div>
            <div class="card-body">
                @if (ceoProfiles.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Created</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in ceoProfiles)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="bg-danger bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-2" style="width:36px;height:36px;">
                                                    <i class="bi bi-shield-lock text-danger"></i>
                                                </div>
                                                <strong>@p.FullName</strong>
                                            </div>
                                        </td>
                                        <td>@p.User?.Email</td>
                                        <td>@p.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td><span class="badge bg-success">Active</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-shield-lock fs-1 d-block mb-2"></i>
                        No CEO profile records found.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
