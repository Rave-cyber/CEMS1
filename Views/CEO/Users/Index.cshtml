                            <input type="text" name="department" class="form-control" placeholder="e.g. Accounting" />
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-success w-100"><i class="bi bi-plus-circle"></i> Create</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Finance List -->
        <div class="card shadow-sm">
            <div class="card-body">
                @if (financeProfiles.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Department</th>
                                    <th>Created</th>
                                    <th>Status</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in financeProfiles)
                                {
                                    <tr class="@(!p.IsActive ? "table-secondary" : "")">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-2" style="width:36px;height:36px;">
                                                    <i class="bi bi-cash-coin text-success"></i>
                                                </div>
                                                <strong>@p.FullName</strong>
                                            </div>
                                        </td>
                                        <td>@p.User?.Email</td>
                                        <td>@(p.Department ?? "—")</td>
                                        <td>@p.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @if (p.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <form asp-controller="CEO" asp-action="ToggleAccountStatus" method="post" class="d-inline">
                                                <input type="hidden" name="profileId" value="@p.Id" />
                                                <input type="hidden" name="role" value="Finance" />
                                                @if (p.IsActive)
                                                {
                                                    <button type="submit" class="btn btn-outline-danger btn-sm" title="Deactivate">
                                                        <i class="bi bi-person-x"></i> Deactivate
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-outline-success btn-sm" title="Activate">
                                                        <i class="bi bi-person-check"></i> Activate
                                                    </button>
                                                }
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-cash-coin fs-1 d-block mb-2"></i>
                        No finance accounts yet. Create one above.
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- ═══════ Driver Tab ═══════ -->
    <div class="tab-pane fade @(activeTab == "driver" ? "show active" : "")" id="driver" role="tabpanel">
        <!-- Create Driver Form -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-info text-white">
                <i class="bi bi-person-plus"></i> Create Driver / Employee Account
            </div>
            <div class="card-body">
                <form asp-controller="CEO" asp-action="CreateAccount" method="post">
                    <input type="hidden" name="role" value="Driver" />
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Full Name <span class="text-danger">*</span></label>
                            <input type="text" name="fullName" class="form-control" required placeholder="e.g. Pedro Garcia" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Email <span class="text-danger">*</span></label>
                            <input type="email" name="email" class="form-control" required placeholder="driver@expense.com" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Password <span class="text-danger">*</span></label>
                            <input type="password" name="password" class="form-control" required minlength="6" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">License Number</label>
                            <input type="text" name="licenseNumber" class="form-control" placeholder="e.g. N01-12-345678" />
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-info text-white w-100"><i class="bi bi-plus-circle"></i> Create</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Driver List -->
        <div class="card shadow-sm">
            <div class="card-body">
                @if (driverProfiles.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>License Number</th>
                                    <th>Created</th>
                                    <th>Status</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in driverProfiles)
                                {
                                    <tr class="@(!p.IsActive ? "table-secondary" : "")">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="bg-info bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-2" style="width:36px;height:36px;">
