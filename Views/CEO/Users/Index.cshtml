@using CEMS.Models
@{
    ViewData["Title"] = "Account Management";
    Layout = "~/Views/Shared/_CEOLayout.cshtml";

    var ceoProfiles = ViewBag.CEOProfiles as List<CEOProfile> ?? new List<CEOProfile>();
    var managerProfiles = ViewBag.ManagerProfiles as List<ManagerProfile> ?? new List<ManagerProfile>();
    var financeProfiles = ViewBag.FinanceProfiles as List<FinanceProfile> ?? new List<FinanceProfile>();
    var driverProfiles = ViewBag.DriverProfiles as List<DriverProfile> ?? new List<DriverProfile>();
    var activeTab = ViewBag.ActiveTab as string ?? "manager";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    :root {
        --d-primary: #1a6bb5;
        --d-accent: #2ec4b6;
        --d-bg: #f7fbfc;
        --d-card: #ffffff;
        --d-border: #e9eef6;
        --d-text: #0f1724;
        --d-muted: #6b7280;
    }

    .page-wrapper {
        background: var(--d-bg);
        min-height: calc(100vh - 80px);
        padding: 28px 0 40px;
    }

    .page-header {
        margin-bottom: 28px;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .page-title {
        font-size: 1.65rem;
        font-weight: 700;
        color: var(--d-text);
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .page-title i {
        color: var(--d-primary);
        font-size: 1.8rem;
    }

    .page-subtitle {
        color: var(--d-muted);
        font-size: .95rem;
        margin-top: 4px;
    }

    .badge-group {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

    .badge-custom {
        display: inline-block;
        padding: 8px 16px;
        border-radius: 6px;
        font-size: .85rem;
        font-weight: 600;
    }

    .badge-custom--managers { background: rgba(26, 107, 181, 0.1); color: var(--d-primary); }
    .badge-custom--finance { background: rgba(16, 185, 129, 0.1); color: #10b981; }
    .badge-custom--drivers { background: rgba(59, 130, 246, 0.1); color: #3b82f6; }

    .alert-danger {
        background: rgba(239, 68, 68, 0.05);
        border: 1px solid rgba(239, 68, 68, 0.2);
        color: #7f1d1d;
        border-radius: 8px;
        margin-bottom: 24px;
    }

    .nav-tabs {
        border: none;
        gap: 0;
        margin-bottom: 24px;
    }

    .nav-tabs .nav-link {
        background: transparent;
        border: none;
        color: var(--d-muted);
        font-weight: 600;
        padding: 12px 16px;
        border-bottom: 3px solid transparent;
        transition: all 0.2s;
    }

    .nav-tabs .nav-link:hover {
        border-bottom-color: var(--d-primary);
        color: var(--d-text);
    }

    .nav-tabs .nav-link.active {
        background: transparent;
        border-bottom: 3px solid var(--d-primary);
        color: var(--d-primary);
    }

    .form-card {
        background: var(--d-card);
        border: 1px solid var(--d-border);
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 24px;
    }

    .form-card-head {
        background: var(--d-primary);
        color: #fff;
        padding: 14px 18px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-card-body {
        padding: 20px;
    }

    .form-label {
        font-weight: 600;
        color: var(--d-text);
        font-size: 0.9rem;
        margin-bottom: 6px;
    }

    .form-control {
        border: 1px solid var(--d-border);
        border-radius: 6px;
        font-size: 0.9rem;
        color: var(--d-text);
    }

    .form-control:focus {
        border-color: var(--d-primary);
        box-shadow: 0 0 0 3px rgba(26, 107, 181, 0.1);
    }

    .btn-primary, .btn-success, .btn-info {
        border: none;
        font-weight: 600;
        border-radius: 6px;
        padding: 10px 16px;
    }

    .btn-primary { background: var(--d-primary); }
    .btn-primary:hover { background: #155196; }

    .btn-success { background: #10b981; }
    .btn-success:hover { background: #059669; }

    .btn-info { background: #3b82f6; }
    .btn-info:hover { background: #2563eb; }

    .table-card {
        background: var(--d-card);
        border: 1px solid var(--d-border);
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 24px;
    }

    .table-card-head {
        background: var(--d-primary);
        color: #fff;
        padding: 14px 18px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .dash-table {
        width: 100%;
        margin-bottom: 0;
    }

    .dash-table thead th {
        background: #f8fafc;
        color: var(--d-muted);
        font-weight: 600;
        font-size: .78rem;
        text-transform: uppercase;
        letter-spacing: .5px;
        padding: 12px 16px;
        border: none;
    }

    .dash-table tbody td {
        padding: 14px 16px;
        border-bottom: 1px solid #f1f5f9;
        vertical-align: middle;
        color: var(--d-text);
        font-size: .9rem;
    }

    .dash-table tbody tr:last-child td {
        border-bottom: none;
    }

    .dash-table tbody tr:hover {
        background: #f8fafc;
    }

    .dash-table.table-secondary {
        opacity: 0.75;
    }

    .status-badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 6px;
        font-size: .75rem;
        font-weight: 600;
    }

    .status-badge--active { background: rgba(16, 185, 129, 0.1); color: #10b981; }
    .status-badge--inactive { background: rgba(239, 68, 68, 0.1); color: #ef4444; }

    .action-btn {
        font-size: .85rem;
        padding: 6px 12px;
        border-radius: 6px;
        border: 1px solid var(--d-border);
        background: transparent;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
    }

    .action-btn--danger {
        color: #ef4444;
        border-color: #ef4444;
    }

    .action-btn--danger:hover {
        background: #ef4444;
        color: #fff;
    }

    .action-btn--success {
        color: #10b981;
        border-color: #10b981;
    }

    .action-btn--success:hover {
        background: #10b981;
        color: #fff;
    }

    .empty-state {
        background: var(--d-card);
        border: 1px solid var(--d-border);
        border-radius: 10px;
        padding: 40px;
        text-align: center;
    }

    .empty-state i {
        font-size: 2.5rem;
        color: var(--d-border);
        margin-bottom: 12px;
    }

    .empty-state p {
        color: var(--d-muted);
        margin: 0;
    }

    .avatar-icon {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 12px;
        flex-shrink: 0;
    }

    .avatar-icon--manager { background: rgba(26, 107, 181, 0.1); color: var(--d-primary); }
    .avatar-icon--finance { background: rgba(16, 185, 129, 0.1); color: #10b981; }
    .avatar-icon--driver { background: rgba(59, 130, 246, 0.1); color: #3b82f6; }
    .avatar-icon--ceo { background: rgba(239, 68, 68, 0.1); color: #ef4444; }

    @@media (max-width: 768px) {
        .page-wrapper { padding: 20px 0 32px; }
        .page-title { font-size: 1.4rem; }
        .page-header { flex-direction: column; gap: 16px; }
        .badge-group { justify-content: flex-start; }
    }
</style>

<div class="page-wrapper">
    <div class="container-fluid px-4">
        <div class="page-header">
            <div>
                <h1 class="page-title">
                    <i class="bi bi-people"></i>
                    Account Management
                </h1>
                <p class="page-subtitle">Create and manage accounts. Only the CEO can create Manager, Finance, and Driver accounts.</p>
            </div>
            <div class="badge-group">
                <div class="badge-custom badge-custom--managers">@managerProfiles.Count Managers</div>
                <div class="badge-custom badge-custom--finance">@financeProfiles.Count Finance</div>
                <div class="badge-custom badge-custom--drivers">@driverProfiles.Count Drivers</div>
            </div>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Tabs -->
        <ul class="nav nav-tabs" id="accountTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link @(activeTab == "manager" ? "active" : "")" id="manager-tab" data-bs-toggle="tab" data-bs-target="#manager" type="button" role="tab">
                    <i class="bi bi-person-badge"></i> Managers
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link @(activeTab == "finance" ? "active" : "")" id="finance-tab" data-bs-toggle="tab" data-bs-target="#finance" type="button" role="tab">
                    <i class="bi bi-cash-coin"></i> Finance
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link @(activeTab == "driver" ? "active" : "")" id="driver-tab" data-bs-toggle="tab" data-bs-target="#driver" type="button" role="tab">
                    <i class="bi bi-truck"></i> Drivers / Employees
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link @(activeTab == "ceo" ? "active" : "")" id="ceo-tab" data-bs-toggle="tab" data-bs-target="#ceo" type="button" role="tab">
                    <i class="bi bi-shield-lock"></i> CEO
                </button>
            </li>
        </ul>

        <div class="tab-content" id="accountTabContent">
            <!-- Manager Tab -->
            <div class="tab-pane fade @(activeTab == "manager" ? "show active" : "")" id="manager" role="tabpanel">
                <div class="form-card">
                    <div class="form-card-head">
                        <i class="bi bi-person-plus"></i> Create Manager Account
                    </div>
                    <div class="form-card-body">
                        <form asp-controller="CEO" asp-action="CreateAccount" method="post">
                            <input type="hidden" name="role" value="Manager" />
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label">Full Name <span class="text-danger">*</span></label>
                                    <input type="text" name="fullName" class="form-control" required placeholder="e.g. Juan Dela Cruz" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Email <span class="text-danger">*</span></label>
                                    <input type="email" name="email" class="form-control" required placeholder="manager@expense.com" />
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Password <span class="text-danger">*</span></label>
                                    <input type="password" name="password" class="form-control" required minlength="6" />
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Department</label>
                                    <input type="text" name="department" class="form-control" placeholder="e.g. Operations" />
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary w-100"><i class="bi bi-plus-circle"></i> Create</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="table-card">
                    @if (managerProfiles.Any())
                    {
                        <div class="table-responsive">
                            <table class="dash-table">
                                <thead>
                                    <tr>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Department</th>
                                        <th>Created</th>
                                        <th>Status</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var p in managerProfiles)
                                    {
                                        <tr class="@(!p.IsActive ? "opacity-50" : "")">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-icon avatar-icon--manager">
                                                        <i class="bi bi-person-badge"></i>
                                                    </div>
                                                    <strong>@p.FullName</strong>
                                                </div>
                                            </td>
                                            <td>@p.User?.Email</td>
                                            <td>@(p.Department ?? "—")</td>
                                            <td>@p.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (p.IsActive)
                                                {
                                                    <span class="status-badge status-badge--active">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="status-badge status-badge--inactive">Inactive</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <form asp-controller="CEO" asp-action="ToggleAccountStatus" method="post" style="display:inline;">
                                                    <input type="hidden" name="profileId" value="@p.Id" />
                                                    <input type="hidden" name="role" value="Manager" />
                                                    @if (p.IsActive)
                                                    {
                                                        <button type="submit" class="action-btn action-btn--danger" title="Deactivate">
                                                            <i class="bi bi-person-x"></i> Deactivate
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button type="submit" class="action-btn action-btn--success" title="Activate">
                                                            <i class="bi bi-person-check"></i> Activate
                                                        </button>
                                                    }
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-person-badge"></i>
                            <p>No manager accounts yet. Create one above.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Finance Tab -->
            <div class="tab-pane fade @(activeTab == "finance" ? "show active" : "")" id="finance" role="tabpanel">
                <div class="form-card">
                    <div class="form-card-head" style="background: #10b981;">
                        <i class="bi bi-person-plus"></i> Create Finance Account
                    </div>
                    <div class="form-card-body">
                        <form asp-controller="CEO" asp-action="CreateAccount" method="post">
                            <input type="hidden" name="role" value="Finance" />
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label">Full Name <span class="text-danger">*</span></label>
                                    <input type="text" name="fullName" class="form-control" required placeholder="e.g. Maria Santos" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Email <span class="text-danger">*</span></label>
                                    <input type="email" name="email" class="form-control" required placeholder="finance@expense.com" />
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Password <span class="text-danger">*</span></label>
                                    <input type="password" name="password" class="form-control" required minlength="6" />
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Department</label>
                                    <input type="text" name="department" class="form-control" placeholder="e.g. Accounting" />
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button type="submit" class="btn btn-success w-100"><i class="bi bi-plus-circle"></i> Create</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="table-card">
                    @if (financeProfiles.Any())
                    {
                        <div class="table-responsive">
                            <table class="dash-table">
                                <thead>
                                    <tr>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Department</th>
                                        <th>Created</th>
                                        <th>Status</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var p in financeProfiles)
                                    {
                                        <tr class="@(!p.IsActive ? "opacity-50" : "")">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-icon avatar-icon--finance">
                                                        <i class="bi bi-cash-coin"></i>
                                                    </div>
                                                    <strong>@p.FullName</strong>
                                                </div>
                                            </td>
                                            <td>@p.User?.Email</td>
                                            <td>@(p.Department ?? "—")</td>
                                            <td>@p.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (p.IsActive)
                                                {
                                                    <span class="status-badge status-badge--active">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="status-badge status-badge--inactive">Inactive</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <form asp-controller="CEO" asp-action="ToggleAccountStatus" method="post" style="display:inline;">
                                                    <input type="hidden" name="profileId" value="@p.Id" />
                                                    <input type="hidden" name="role" value="Finance" />
                                                    @if (p.IsActive)
                                                    {
                                                        <button type="submit" class="action-btn action-btn--danger" title="Deactivate">
                                                            <i class="bi bi-person-x"></i> Deactivate
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button type="submit" class="action-btn action-btn--success" title="Activate">
                                                            <i class="bi bi-person-check"></i> Activate
                                                        </button>
                                                    }
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-cash-coin"></i>
                            <p>No finance accounts yet. Create one above.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Driver Tab -->
            <div class="tab-pane fade @(activeTab == "driver" ? "show active" : "")" id="driver" role="tabpanel">
                <div class="form-card">
                    <div class="form-card-head" style="background: #3b82f6;">
                        <i class="bi bi-person-plus"></i> Create Driver / Employee Account
                    </div>
                    <div class="form-card-body">
                        <form asp-controller="CEO" asp-action="CreateAccount" method="post">
                            <input type="hidden" name="role" value="Driver" />
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label">Full Name <span class="text-danger">*</span></label>
                                    <input type="text" name="fullName" class="form-control" required placeholder="e.g. Pedro Garcia" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Email <span class="text-danger">*</span></label>
                                    <input type="email" name="email" class="form-control" required placeholder="driver@expense.com" />
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Password <span class="text-danger">*</span></label>
                                    <input type="password" name="password" class="form-control" required minlength="6" />
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">License Number</label>
                                    <input type="text" name="licenseNumber" class="form-control" placeholder="e.g. N01-12-345678" />
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button type="submit" class="btn btn-info text-white w-100"><i class="bi bi-plus-circle"></i> Create</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="table-card">
                    @if (driverProfiles.Any())
                    {
                        <div class="table-responsive">
                            <table class="dash-table">
                                <thead>
                                    <tr>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>License Number</th>
                                        <th>Created</th>
                                        <th>Status</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var p in driverProfiles)
                                    {
                                        <tr class="@(!p.IsActive ? "opacity-50" : "")">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-icon avatar-icon--driver">
                                                        <i class="bi bi-truck"></i>
                                                    </div>
                                                    <strong>@p.FullName</strong>
                                                </div>
                                            </td>
                                            <td>@p.User?.Email</td>
                                            <td>@(p.LicenseNumber ?? "—")</td>
                                            <td>@p.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (p.IsActive)
                                                {
                                                    <span class="status-badge status-badge--active">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="status-badge status-badge--inactive">Inactive</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <form asp-controller="CEO" asp-action="ToggleAccountStatus" method="post" style="display:inline;">
                                                    <input type="hidden" name="profileId" value="@p.Id" />
                                                    <input type="hidden" name="role" value="Driver" />
                                                    @if (p.IsActive)
                                                    {
                                                        <button type="submit" class="action-btn action-btn--danger" title="Deactivate">
                                                            <i class="bi bi-person-x"></i> Deactivate
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button type="submit" class="action-btn action-btn--success" title="Activate">
                                                            <i class="bi bi-person-check"></i> Activate
                                                        </button>
                                                    }
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-truck"></i>
                            <p>No driver accounts yet. Create one above.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- CEO Tab (read-only) -->
            <div class="tab-pane fade @(activeTab == "ceo" ? "show active" : "")" id="ceo" role="tabpanel">
                <div class="table-card">
                    @if (ceoProfiles.Any())
                    {
                        <div class="table-responsive">
                            <table class="dash-table">
                                <thead>
                                    <tr>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Created</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var p in ceoProfiles)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-icon avatar-icon--ceo">
                                                        <i class="bi bi-shield-lock"></i>
                                                    </div>
                                                    <strong>@p.FullName</strong>
                                                </div>
                                            </td>
                                            <td>@p.User?.Email</td>
                                            <td>@p.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td><span class="status-badge status-badge--active">Active</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-shield-lock"></i>
                            <p>No CEO profile records found.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
