@{
    ViewData["Title"] = "CEO Dashboard";
    Layout = "~/Views/Shared/_CEOLayout.cshtml";

    decimal totalBudget = ViewBag.TotalBudget ?? 0m;
    decimal totalSpent = ViewBag.TotalSpent ?? 0m;
    decimal totalRemaining = ViewBag.TotalRemaining ?? 0m;
    int pendingCEOCount = ViewBag.PendingCEOCount ?? 0;
    decimal pendingCEOTotal = ViewBag.PendingCEOTotal ?? 0m;
    int activeDrivers = ViewBag.ActiveDrivers ?? 0;
    int usagePct = totalBudget == 0 ? 0 : (int)Math.Round((double)(totalSpent / totalBudget * 100));
    var recentOB = ViewBag.RecentOverBudget as List<CEMS.Models.OverBudgetReportDto> ?? new List<CEMS.Models.OverBudgetReportDto>();
}

<div class="container-fluid px-4">
    <!-- Dashboard Header -->
    <div class="d-flex justify-content-between align-items-center py-4">
        <div>
            <h1 class="h2 fw-bold">🏢 CEO Dashboard</h1>
            <p class="text-muted mb-0">Welcome back, @User.Identity?.Name</p>
        </div>
        <div>
            <span class="badge bg-danger fs-6 px-3 py-2">CEO PRIVILEGES</span>
        </div>
    </div>

    <!-- Quick Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-primary border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Total Budget</h6>
                            <h3 class="fw-bold">₱@totalBudget.ToString("N2")</h3>
                            <p class="mb-0 text-muted">All Categories</p>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-cash-coin text-primary fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-success border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Utilized</h6>
                            <h3 class="fw-bold">₱@totalSpent.ToString("N2")</h3>
                            <p class="mb-0 text-muted">@usagePct% of Budget</p>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="bi bi-graph-up-arrow text-success fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-warning border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Pending Review</h6>
                            <h3 class="fw-bold">₱@pendingCEOTotal.ToString("N2")</h3>
                            <p class="mb-0 text-muted">@pendingCEOCount Over-Budget Requests</p>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                            <i class="bi bi-clock text-warning fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-info border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Active Drivers</h6>
                            <h3 class="fw-bold">@activeDrivers</h3>
                            <p class="mb-0 text-muted">Registered</p>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded">
                            <i class="bi bi-people text-info fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CEO Quick Actions -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <h4 class="mb-3">⚡ Quick Actions</h4>
            <div class="row g-3">
                <div class="col-md-3">
                    <a asp-controller="CEO" asp-action="Budget" class="card text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-cash-stack text-primary fs-2"></i>
                            </div>
                            <h5 class="card-title">Set Budget</h5>
                            <p class="card-text text-muted small">Define monthly budgets</p>
                        </div>
                    </a>
                </div>

                <div class="col-md-3">
                    <a asp-controller="CEO" asp-action="Approvals" class="card text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-exclamation-triangle text-warning fs-2"></i>
                            </div>
                            <h5 class="card-title">Over-Budget Review</h5>
                            <p class="card-text text-muted small">@pendingCEOCount pending</p>
                        </div>
                    </a>
                </div>

                <div class="col-md-3">
                    <a asp-controller="CEO" asp-action="Analytics" class="card text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-bar-chart text-success fs-2"></i>
                            </div>
                            <h5 class="card-title">Reports</h5>
                            <p class="card-text text-muted small">View analytics</p>
                        </div>
                    </a>
                </div>

                <div class="col-md-3">
                    <a asp-controller="CEO" asp-action="Users" class="card text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-person-plus text-info fs-2"></i>
                            </div>
                            <h5 class="card-title">Manage Users</h5>
                            <p class="card-text text-muted small">Add/Edit users</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Over-Budget Requests Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">📋 Recent Over-Budget Requests</h5>
        </div>
        <div class="card-body">
            @if (recentOB.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Report #</th>
                                <th>Driver</th>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Exceeded</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in recentOB)
                            {
                                <tr>
                                    <td>@item.Report.Id</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-2">
                                                <i class="bi bi-person text-primary"></i>
                                            </div>
                                            <span>@item.UserName</span>
                                        </div>
                                    </td>
                                    <td>@item.Report.SubmissionDate.ToLocalTime().ToString("MMM d, yyyy")</td>
                                    <td><span class="fw-bold">₱@item.Report.TotalAmount.ToString("N2")</span></td>
                                    <td>
                                        @if (item.ExceedAmount > 0)
                                        {
                                            <small class="text-danger fw-bold">+₱@item.ExceedAmount.ToString("N2")</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">—</small>
                                        }
                                    </td>
                                    <td><span class="badge bg-warning">Needs Approval</span></td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a class="btn btn-outline-primary" asp-controller="CEO" asp-action="ReportDetails" asp-route-id="@item.Report.Id">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4 text-muted">
                    <i class="bi bi-check-circle fs-1"></i>
                    <p class="mt-2">No over-budget requests pending your review.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-2px);
        transition: all 0.3s ease;
    }

    .avatar-sm {
        width: 32px;
        height: 32px;
    }

    .border-start {
        border-left-width: 4px !important;
    }
</style>