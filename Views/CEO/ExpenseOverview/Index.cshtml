@{
    ViewData["Title"] = "Expense Overview";
    Layout = "~/Views/Shared/_CEOLayout.cshtml";
    var reports = ViewBag.Reports as List<CEMS.Models.PendingExpenseReportDto> ?? new List<CEMS.Models.PendingExpenseReportDto>();
    var categories = ViewBag.Categories as List<string> ?? new List<string>();
    string filterCategory = ViewBag.FilterCategory ?? "";
    string filterStatus = ViewBag.FilterStatus ?? "";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-receipt text-primary"></i> Expense Overview</h2>
        <p class="text-muted mb-0">View all expenses across the organization.</p>
    </div>
    <span class="badge bg-primary fs-6 px-3 py-2">@reports.Count Reports</span>
</div>

<!-- Filters -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" asp-action="ExpenseOverview" asp-controller="CEO" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Category</label>
                <select name="category" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var cat in categories)
                    {
                        <option value="@cat" selected="@(filterCategory == cat)">@cat</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Status</label>
                <select name="status" class="form-select">
                    <option value="">All</option>
                    <option value="Submitted" selected="@(filterStatus == "Submitted")">Submitted</option>
                    <option value="Approved" selected="@(filterStatus == "Approved")">Approved</option>
                    <option value="Rejected" selected="@(filterStatus == "Rejected")">Rejected</option>
                    <option value="PendingCEOApproval" selected="@(filterStatus == "PendingCEOApproval")">Pending CEO</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">From</label>
                <input type="date" name="start" class="form-control" value="@(ViewBag.FilterStart != null ? ((DateTime)ViewBag.FilterStart).ToString("yyyy-MM-dd") : "")" />
            </div>
            <div class="col-md-2">
                <label class="form-label">To</label>
                <input type="date" name="end" class="form-control" value="@(ViewBag.FilterEnd != null ? ((DateTime)ViewBag.FilterEnd).ToString("yyyy-MM-dd") : "")" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary me-2"><i class="bi bi-funnel"></i> Filter</button>
                <a asp-action="ExpenseOverview" asp-controller="CEO" class="btn btn-outline-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

<!-- Results -->
@if (reports.Any())
{
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Report #</th>
                            <th>Driver</th>
                            <th>Total Amount</th>
                            <th>Submitted</th>
                            <th>Status</th>
                            <th>Budget Check</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dto in reports)
                        {
                            var r = dto.Report;
                            <tr>
                                <td><strong>#@r.Id</strong></td>
                                <td>@(dto.UserName ?? "Unknown")</td>
                                <td class="fw-bold">₱@r.TotalAmount.ToString("N2")</td>
                                <td>@r.SubmissionDate.ToLocalTime().ToString("MMM d, yyyy")</td>
                                <td>
                                    @switch (r.Status)
                                    {
                                        case CEMS.Models.ReportStatus.Approved:
                                            <span class="badge bg-success">Approved</span>
                                            break;
                                        case CEMS.Models.ReportStatus.Rejected:
                                            <span class="badge bg-danger">Rejected</span>
                                            break;
                                        case CEMS.Models.ReportStatus.PendingCEOApproval:
                                            <span class="badge bg-warning text-dark">Pending CEO</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">Submitted</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (r.BudgetCheck == CEMS.Models.BudgetCheckStatus.OverBudget)
                                    {
                                        <span class="badge bg-danger">Over Budget</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Within Budget</span>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-outline-primary" asp-controller="CEO" asp-action="ReportDetails" asp-route-id="@r.Id">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Summary -->
            <div class="row mt-3">
                <div class="col-md-4">
                    <small class="text-muted">Total Amount (filtered):</small>
                    <strong>₱@reports.Sum(r => r.Report.TotalAmount).ToString("N2")</strong>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info text-center py-4">
        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
        No expense reports found matching the selected filters.
    </div>
}
