@{
    ViewData["Title"] = "Expense Overview";
    Layout = "~/Views/Shared/_CEOLayout.cshtml";
    var reports = ViewBag.Reports as List<CEMS.Models.PendingExpenseReportDto> ?? new List<CEMS.Models.PendingExpenseReportDto>();
    var categories = ViewBag.Categories as List<string> ?? new List<string>();
    string filterCategory = ViewBag.FilterCategory ?? "";
    string filterStatus = ViewBag.FilterStatus ?? "";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    :root {
        --d-primary: #1a6bb5;
        --d-accent: #2ec4b6;
        --d-bg: #f7fbfc;
        --d-card: #ffffff;
        --d-border: #e9eef6;
        --d-text: #0f1724;
        --d-muted: #6b7280;
    }

    .page-wrapper {
        background: var(--d-bg);
        min-height: calc(100vh - 80px);
        padding: 28px 0 40px;
    }

    .page-header {
        margin-bottom: 28px;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .page-title {
        font-size: 1.65rem;
        font-weight: 700;
        color: var(--d-text);
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .page-title i {
        color: var(--d-primary);
        font-size: 1.8rem;
    }

    .page-subtitle {
        color: var(--d-muted);
        font-size: .95rem;
        margin-top: 4px;
    }

    .badge-count {
        background: rgba(26, 107, 181, 0.1);
        color: var(--d-primary);
        padding: 8px 16px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.85rem;
    }

    .filter-card {
        background: var(--d-card);
        border: 1px solid var(--d-border);
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 24px;
    }

    .form-label {
        font-weight: 600;
        color: var(--d-text);
        font-size: 0.9rem;
        margin-bottom: 6px;
    }

    .form-select, .form-control {
        border: 1px solid var(--d-border);
        border-radius: 6px;
        font-size: 0.9rem;
        color: var(--d-text);
    }

    .form-select:focus, .form-control:focus {
        border-color: var(--d-primary);
        box-shadow: 0 0 0 3px rgba(26, 107, 181, 0.1);
    }

    .btn-primary {
        background: var(--d-primary);
        border: none;
        color: #fff;
        font-weight: 600;
        border-radius: 6px;
        padding: 10px 16px;
        transition: all 0.2s;
    }

    .btn-primary:hover {
        background: #155196;
        color: #fff;
    }

    .btn-outline-secondary {
        border: 1px solid var(--d-border);
        color: var(--d-text);
        background: transparent;
        font-weight: 600;
        border-radius: 6px;
    }

    .btn-outline-secondary:hover {
        background: #f8fafc;
        border-color: var(--d-border);
    }

    .table-card {
        background: var(--d-card);
        border: 1px solid var(--d-border);
        border-radius: 10px;
        overflow: hidden;
    }

    .dash-table {
        width: 100%;
        margin-bottom: 0;
    }

    .dash-table thead th {
        background: #f8fafc;
        color: var(--d-muted);
        font-weight: 600;
        font-size: .78rem;
        text-transform: uppercase;
        letter-spacing: .5px;
        padding: 12px 16px;
        border: none;
    }

    .dash-table tbody td {
        padding: 14px 16px;
        border-bottom: 1px solid #f1f5f9;
        vertical-align: middle;
        color: var(--d-text);
        font-size: .9rem;
    }

    .dash-table tbody tr:last-child td {
        border-bottom: none;
    }

    .dash-table tbody tr:hover {
        background: #f8fafc;
    }

    .status-badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 6px;
        font-size: .75rem;
        font-weight: 600;
    }

    .status-badge--approved { background: rgba(16, 185, 129, 0.1); color: #10b981; }
    .status-badge--rejected { background: rgba(239, 68, 68, 0.1); color: #ef4444; }
    .status-badge--pending { background: rgba(245, 158, 11, 0.1); color: #f59e0b; }
    .status-badge--submitted { background: rgba(107, 114, 128, 0.1); color: #6b7280; }

    .budget-badge--over { background: rgba(239, 68, 68, 0.1); color: #ef4444; }
    .budget-badge--within { background: rgba(16, 185, 129, 0.1); color: #10b981; }

    .action-btn {
        font-size: .85rem;
        padding: 6px 12px;
        border-radius: 6px;
        border: 1px solid var(--d-border);
        background: var(--d-card);
        color: var(--d-primary);
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .action-btn:hover {
        background: var(--d-primary);
        color: #fff;
        border-color: var(--d-primary);
    }

    .summary-section {
        padding: 16px 20px;
        background: #f8fafc;
        border-top: 1px solid var(--d-border);
    }

    .empty-state {
        background: var(--d-card);
        border: 1px solid var(--d-border);
        border-radius: 10px;
        padding: 60px 20px;
        text-align: center;
    }

    .empty-state i {
        font-size: 3rem;
        color: var(--d-border);
        margin-bottom: 16px;
    }

    .empty-state p {
        color: var(--d-muted);
        margin: 0;
    }

    @@media (max-width: 768px) {
        .page-wrapper { padding: 20px 0 32px; }
        .page-title { font-size: 1.4rem; }
        .page-header { flex-direction: column; gap: 12px; align-items: flex-start; }
    }
</style>

<div class="page-wrapper">
    <div class="container-fluid px-4">
        <div class="page-header">
            <div>
                <h1 class="page-title">
                    <i class="bi bi-receipt"></i>
                    Expense Overview
                </h1>
                <p class="page-subtitle">View all expenses across the organization.</p>
            </div>
            @if (reports.Any())
            {
                <div class="badge-count">@reports.Count Reports</div>
            }
        </div>

<!-- Filters -->
<div class="filter-card">
    <form method="get" asp-action="ExpenseOverview" asp-controller="CEO" class="row g-3 align-items-end">
        <div class="col-md-3">
            <label class="form-label">Category</label>
            <select name="category" class="form-select">
                <option value="">All Categories</option>
                @foreach (var cat in categories)
                {
                    <option value="@cat" selected="@(filterCategory == cat)">@cat</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <label class="form-label">Status</label>
            <select name="status" class="form-select">
                <option value="">All</option>
                <option value="Submitted" selected="@(filterStatus == "Submitted")">Submitted</option>
                <option value="Approved" selected="@(filterStatus == "Approved")">Approved</option>
                <option value="Rejected" selected="@(filterStatus == "Rejected")">Rejected</option>
                <option value="PendingCEOApproval" selected="@(filterStatus == "PendingCEOApproval")">Pending CEO</option>
            </select>
        </div>
        <div class="col-md-2">
            <label class="form-label">From</label>
            <input type="date" name="start" class="form-control" value="@(ViewBag.FilterStart != null ? ((DateTime)ViewBag.FilterStart).ToString("yyyy-MM-dd") : "")" />
        </div>
        <div class="col-md-2">
            <label class="form-label">To</label>
            <input type="date" name="end" class="form-control" value="@(ViewBag.FilterEnd != null ? ((DateTime)ViewBag.FilterEnd).ToString("yyyy-MM-dd") : "")" />
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary me-2">
                <i class="bi bi-funnel"></i> Filter
            </button>
            <a asp-action="ExpenseOverview" asp-controller="CEO" class="btn btn-outline-secondary">Clear</a>
        </div>
    </form>
</div>

        <!-- Results -->
        @if (reports.Any())
        {
            <div class="table-card">
                <div class="table-responsive">
                    <table class="dash-table">
                        <thead>
                            <tr>
                                <th>Report #</th>
                                <th>Driver</th>
                                <th>Total Amount</th>
                                <th>Submitted</th>
                                <th>Status</th>
                                <th>Budget Check</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dto in reports)
                            {
                                var r = dto.Report;
                                <tr>
                                    <td><strong>#@r.Id</strong></td>
                                    <td>@(dto.UserName ?? "Unknown")</td>
                                    <td class="fw-bold">₱@r.TotalAmount.ToString("N2")</td>
                                    <td>@r.SubmissionDate.ToLocalTime().ToString("MMM d, yyyy")</td>
                                    <td>
                                        @switch (r.Status)
                                        {
                                            case CEMS.Models.ReportStatus.Approved:
                                                <span class="status-badge status-badge--approved">Approved</span>
                                                break;
                                            case CEMS.Models.ReportStatus.Rejected:
                                                <span class="status-badge status-badge--rejected">Rejected</span>
                                                break;
                                            case CEMS.Models.ReportStatus.PendingCEOApproval:
                                                <span class="status-badge status-badge--pending">Pending CEO</span>
                                                break;
                                            default:
                                                <span class="status-badge status-badge--submitted">Submitted</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (r.BudgetCheck == CEMS.Models.BudgetCheckStatus.OverBudget)
                                        {
                                            <span class="status-badge budget-badge--over">Over Budget</span>
                                        }
                                        else
                                        {
                                            <span class="status-badge budget-badge--within">Within Budget</span>
                                        }
                                    </td>
                                    <td>
                                        <a class="action-btn" asp-controller="CEO" asp-action="ReportDetails" asp-route-id="@r.Id">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Summary -->
                <div class="summary-section">
                    <div class="row">
                        <div class="col-md-4">
                            <small style="color: var(--d-muted);">Total Amount (filtered):</small>
                            <div style="font-weight: 700; font-size: 1.1rem; color: var(--d-text);">₱@reports.Sum(r => r.Report.TotalAmount).ToString("N2")</div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-inbox"></i>
                <p>No expense reports found matching the selected filters.</p>
            </div>
        }
    </div>
</div>
