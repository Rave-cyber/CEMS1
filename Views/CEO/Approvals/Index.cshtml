@{
    ViewData["Title"] = "Over-Budget Expense Reports";
    Layout = "~/Views/Shared/_CEOLayout.cshtml";
    var reports = ViewBag.Forwarded as List<CEMS.Models.OverBudgetReportDto> ?? new List<CEMS.Models.OverBudgetReportDto>();
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    .badge-pending {
        background: transparent;
        color: var(--d-text);
        padding: 0;
        border-radius: 0;
        font-weight: 700;
        font-size: 0.95rem;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        flex-wrap: wrap;
        gap: 12px;
    }

    .page-title i {
        color: var(--d-warning);
    }

    @@media (max-width: 768px) {
        .page-header { flex-direction: column; align-items: flex-start; }
    }
</style>

<div class="page-wrapper">
    <div class="container-fluid px-4">
            <div class="page-header">
            <div>
                <h1 class="page-title">
                    <i class="bi bi-exclamation-triangle"></i>
                    Over-Budget Approvals
                </h1>
                <p class="page-subtitle">Expense reports that exceed budget limits require your approval.</p>
            </div>
            @if (reports.Any())
            {
                    <div class="badge-pending">
                        @reports.Count Pending
                    </div>
            }
        </div>

        @if (reports.Any())
        {
            <div class="table-card">
                <div class="table-responsive">
                    <table class="dash-table">
                        <thead>
                            <tr>
                                <th>Report #</th>
                                <th>Driver</th>
                                <th>Total Amount</th>
                                <th>Exceeded By</th>
                                <th>Submitted</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dto in reports)
                            {
                                var r = dto.Report;
                                <tr>
                                    <td><strong>#@r.Id</strong></td>
                                    <td>@(dto.UserName ?? "Unknown")</td>
                                    <td><strong>₱@r.TotalAmount.ToString("N2")</strong></td>
                                    <td>
                                        @if (dto.ExceedAmount > 0)
                                        {
                                            <span class="fw-semibold">+₱@dto.ExceedAmount.ToString("N2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td>@r.SubmissionDate.ToLocalTime().ToString("MMM d, yyyy")</td>
                                    <td><span class="status-badge">Pending CEO</span></td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a class="view-btn" asp-controller="CEO" asp-action="ReportDetails" asp-route-id="@r.Id">View</a>
                                            <form method="post" asp-action="ApproveForReimbursement" asp-controller="CEO" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@r.Id" />
                                                <button type="submit" class="approve-btn">Approve</button>
                                            </form>
                                            <form method="post" asp-action="RejectForReimbursement" asp-controller="CEO" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@r.Id" />
                                                <button type="submit" class="reject-btn">Reject</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-check-circle"></i>
                <div class="empty-state-title">All Clear!</div>
                <p class="empty-state-text">No over-budget expense reports awaiting your approval.</p>
            </div>
        }
    </div>
</div>
