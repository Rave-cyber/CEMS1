@{
    ViewData["Title"] = "Budget Management";
    Layout = "~/Views/Shared/_CEOLayout.cshtml";
    var budgets = ViewBag.Budgets as List<CEMS.Models.Budget> ?? new List<CEMS.Models.Budget>();
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    :root {
        --d-primary: #1a6bb5;
        --d-accent: #2ec4b6;
        --d-bg: #f7fbfc;
        --d-card: #ffffff;
        --d-border: #e9eef6;
        --d-text: #0f1724;
        --d-muted: #6b7280;
    }

    .page-wrapper {
        background: var(--d-bg);
        min-height: calc(100vh - 80px);
        padding: 28px 0 40px;
    }

    .page-header {
        margin-bottom: 28px;
    }

    .page-title {
        font-size: 1.65rem;
        font-weight: 700;
        color: var(--d-text);
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .page-subtitle {
        color: var(--d-muted);
        font-size: .95rem;
        margin-top: 4px;
    }

    .page-title i {
        color: var(--d-primary);
        font-size: 1.8rem;
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.05);
        border: 1px solid rgba(239, 68, 68, 0.2);
        color: #7f1d1d;
        border-radius: 8px;
        margin-bottom: 24px;
    }

    .alert-danger .btn-close {
        filter: invert(0.5);
    }

    .form-card {
        background: var(--d-card);
        border: 1px solid var(--d-border);
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 24px;
    }

    .form-card-title {
        font-size: 1rem;
        font-weight: 700;
        color: var(--d-text);
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 8px;
        padding-bottom: 12px;
        border-bottom: 1px solid var(--d-border);
    }

    .form-label {
        font-weight: 600;
        color: var(--d-text);
        font-size: 0.9rem;
        margin-bottom: 6px;
    }

    .form-control {
        border: 1px solid var(--d-border);
        border-radius: 6px;
        padding: 10px 12px;
        font-size: 0.9rem;
        color: var(--d-text);
    }

    .form-control:focus {
        border-color: var(--d-primary);
        box-shadow: 0 0 0 3px rgba(26, 107, 181, 0.1);
    }

    .input-group-text {
        background: #f8fafc;
        border: 1px solid var(--d-border);
        color: var(--d-muted);
    }

    .btn-primary {
        background: var(--d-primary);
        border: none;
        color: #fff;
        font-weight: 600;
        border-radius: 6px;
        padding: 10px 16px;
        transition: all 0.2s;
    }

    .btn-primary:hover {
        background: #155196;
        color: #fff;
    }

    .btn-outline-primary {
        border: 1px solid var(--d-primary);
        color: var(--d-primary);
        background: transparent;
        font-weight: 600;
        border-radius: 6px;
        padding: 8px 12px;
        transition: all 0.2s;
    }

    .btn-outline-primary:hover {
        background: var(--d-primary);
        color: #fff;
    }

    .table-card {
        background: var(--d-card);
        border: 1px solid var(--d-border);
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 24px;
    }

    .table-card-head {
        background: #f8fafc;
        padding: 16px 18px;
        border-bottom: 1px solid var(--d-border);
        font-weight: 600;
        color: var(--d-text);
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .dash-table {
        width: 100%;
        margin-bottom: 0;
    }

    .dash-table thead th {
        background: #f8fafc;
        color: var(--d-muted);
        font-weight: 600;
        font-size: .78rem;
        text-transform: uppercase;
        letter-spacing: .5px;
        padding: 12px 16px;
        border: none;
    }

    .dash-table tbody td {
        padding: 14px 16px;
        border-bottom: 1px solid #f1f5f9;
        vertical-align: middle;
        color: var(--d-text);
        font-size: .9rem;
    }

    .dash-table tbody tr:last-child td {
        border-bottom: none;
    }

    .dash-table tbody tr:hover {
        background: #f8fafc;
    }

    .budget-bar {
        height: 8px;
        border-radius: 4px;
        background: #f1f5f9;
        overflow: hidden;
    }

    .budget-bar-fill {
        height: 100%;
        border-radius: 4px;
        transition: width .3s ease;
    }

    .budget-bar-fill--ok { background: var(--d-primary); }
    .budget-bar-fill--warn { background: #f59e0b; }
    .budget-bar-fill--danger { background: #ef4444; }

    .stat-card {
        background: var(--d-card);
        border: 1px solid var(--d-border);
        border-radius: 10px;
        padding: 20px;
        text-align: center;
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--d-text);
        margin: 8px 0;
    }

    .stat-label {
        color: var(--d-muted);
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stat-card--primary { border-top: 3px solid var(--d-primary); }
    .stat-card--warning { border-top: 3px solid #f59e0b; }
    .stat-card--success { border-top: 3px solid #10b981; }

    .empty-state {
        background: var(--d-card);
        border: 1px solid var(--d-border);
        border-radius: 10px;
        padding: 40px;
        text-align: center;
    }

    .empty-state i {
        font-size: 3rem;
        color: var(--d-border);
        margin-bottom: 16px;
    }

    .empty-state p {
        color: var(--d-muted);
        margin: 0;
    }

    @@media (max-width: 768px) {
        .page-wrapper { padding: 20px 0 32px; }
        .page-title { font-size: 1.4rem; }
    }
</style>

<div class="page-wrapper">
    <div class="container-fluid px-4">
        <div class="page-header">
            <h1 class="page-title">
                <i class="bi bi-cash-stack"></i>
                Budget Management
            </h1>
            <p class="page-subtitle">Create monthly budgets and set limits per category.</p>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row g-4">
            <!-- Create New Budget Form -->
            <div class="col-lg-4">
                <div class="form-card">
                    <div class="form-card-title">
                        <i class="bi bi-plus-circle" style="color: var(--d-primary);"></i>
                        Create New Budget
                    </div>
                    <form method="post" asp-action="CreateBudget" asp-controller="CEO">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">Category</label>
                            <input type="text" name="category" class="form-control" placeholder="e.g., Fuel, Maintenance" required />
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Allocated Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">₱</span>
                                <input type="number" step="0.01" name="allocated" class="form-control" placeholder="0.00" min="0" required />
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-plus-lg"></i> Create Budget
                        </button>
                    </form>
                </div>
            </div>

            <!-- Current Budgets Section -->
            <div class="col-lg-8">
                <div class="table-card">
                    <div class="table-card-head">
                        <i class="bi bi-list-ul"></i>
                        Current Budgets
                    </div>
                    @if (budgets.Any())
                    {
                        <div class="table-responsive">
                            <table class="dash-table">
                                <thead>
                                    <tr>
                                        <th>Category</th>
                                        <th>Allocated</th>
                                        <th>Spent</th>
                                        <th>Remaining</th>
                                        <th>Usage</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var b in budgets)
                                    {
                                        var remaining = b.Allocated - b.Spent;
                                        var pct = b.Allocated == 0 ? 0 : (int)Math.Round((double)(b.Spent / b.Allocated * 100));
                                        var barClass = pct >= 100 ? "budget-bar-fill--danger" : pct >= 75 ? "budget-bar-fill--warn" : "budget-bar-fill--ok";
                                        <tr>
                                            <td class="fw-600">@b.Category</td>
                                            <td>₱<strong>@b.Allocated.ToString("N2")</strong></td>
                                            <td>₱<strong>@b.Spent.ToString("N2")</strong></td>
                                            <td class="@(remaining < 0 ? "fw-bold" : "")">
                                                <span style="color: @(remaining < 0 ? "#ef4444" : "#0d8b7d");">₱@remaining.ToString("N2")</span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="budget-bar" style="flex: 1; min-width: 80px;">
                                                        <div class="budget-bar-fill @barClass" style="width:@Math.Min(pct, 100)%"></div>
                                                    </div>
                                                    <span style="font-weight: 600; font-size: 0.85rem;">@pct%</span>
                                                </div>
                                            </td>
                                            <td>
                                                <form method="post" asp-action="UpdateBudget" asp-controller="CEO" class="d-flex gap-2 align-items-center">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@b.Id" />
                                                    <div class="input-group input-group-sm" style="width: 140px;">
                                                        <span class="input-group-text">₱</span>
                                                        <input type="number" step="0.01" name="allocated" value="@b.Allocated" class="form-control" />
                                                    </div>
                                                    <button type="submit" class="btn btn-outline-primary btn-sm">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Budget Summary Cards -->
                        <div class="p-3 bg-light border-top" style="border-color: var(--d-border) !important;">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <div class="stat-card stat-card--primary">
                                        <div class="stat-label">Total Allocated</div>
                                        <div class="stat-value">₱@budgets.Sum(b => b.Allocated).ToString("N2")</div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="stat-card stat-card--warning">
                                        <div class="stat-label">Total Spent</div>
                                        <div class="stat-value">₱@budgets.Sum(b => b.Spent).ToString("N2")</div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="stat-card stat-card--success">
                                        <div class="stat-label">Total Remaining</div>
                                        <div class="stat-value">₱@budgets.Sum(b => b.Allocated - b.Spent).ToString("N2")</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-inbox"></i>
                            <p>No budgets created yet. Use the form to create your first budget.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
