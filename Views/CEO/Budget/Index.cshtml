@{
    ViewData["Title"] = "Budget Management";
    Layout = "~/Views/Shared/_CEOLayout.cshtml";
    var budgets = ViewBag.Budgets as List<CEMS.Models.Budget> ?? new List<CEMS.Models.Budget>();
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    .btn-primary {
        background: var(--d-primary);
        border: none;
        color: #fff;
        font-weight: 600;
        border-radius: 6px;
        padding: 10px 16px;
        transition: all 0.2s;
    }

    .btn-primary:hover {
        background: #155196;
        color: #fff;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(26, 107, 181, 0.2);
    }

    .btn-primary:active {
        transform: translateY(0);
    }

    .btn-outline-primary {
        border: 1px solid var(--d-primary);
        color: var(--d-primary);
        background: transparent;
        font-weight: 600;
        border-radius: 6px;
        padding: 6px 12px;
        font-size: 0.85rem;
        transition: all 0.2s;
    }

    .btn-outline-primary:hover {
        background: var(--d-primary);
        color: #fff;
    }

    .btn-outline-danger {
        border: 1px solid var(--d-danger);
        color: var(--d-danger);
        background: transparent;
        font-weight: 600;
        border-radius: 6px;
        padding: 6px 12px;
        font-size: 0.85rem;
        transition: all 0.2s;
    }

    .btn-outline-danger:hover {
        background: var(--d-danger);
        color: #fff;
    }

    .action-buttons {
        display: flex;
        gap: 6px;
        flex-wrap: nowrap;
    }

    .stat-card--primary { border-top: 3px solid var(--d-primary); }
    .stat-card--warning { border-top: 3px solid var(--d-warning); }
    .stat-card--success { border-top: 3px solid var(--d-success); }

    .stat-card {
        text-align: center;
    }

    /* Modal Styles */
    .modal-header {
        background: #f8fafc;
        border-bottom: 1px solid var(--d-border);
        padding: 16px 20px;
    }

    .modal-header .modal-title {
        font-weight: 700;
        color: var(--d-text);
        font-size: 1.1rem;
    }

    .modal-header .btn-close {
        color: var(--d-text);
    }

    .modal-body {
        padding: 24px 20px;
    }

    .modal-footer {
        background: #f8fafc;
        border-top: 1px solid var(--d-border);
        padding: 16px 20px;
    }

    .modal-content {
        border: 1px solid var(--d-border);
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .modal-body .mb-3 {
        margin-bottom: 16px;
    }

    .modal-body .form-label {
        margin-bottom: 8px;
    }

    @@media (max-width: 768px) {
        .page-wrapper { padding: 20px 0 32px; }
        .page-title { font-size: 1.4rem; }
        .action-buttons { flex-direction: row; }
    }
</style>

<div class="page-wrapper">
    <div class="container-fluid px-4">
        <div class="page-header">
            <h1 class="page-title">
                <i class="bi bi-cash-stack"></i>
                Budget Management
            </h1>
            <p class="page-subtitle">Create monthly budgets and set limits per category.</p>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row g-4">
            <!-- Create New Budget Form -->
            <div class="col-lg-4">
                <div class="form-card">
                    <div class="form-card-title">
                        <i class="bi bi-plus-circle" style="color: var(--d-primary);"></i>
                        Create New Budget
                    </div>
                    <form method="post" asp-action="CreateBudget" asp-controller="CEO">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">Category</label>
                            <input type="text" name="category" class="form-control" placeholder="e.g., Fuel, Maintenance" required />
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Allocated Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">₱</span>
                                <input type="number" step="0.01" name="allocated" class="form-control" placeholder="0.00" min="0" required />
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-plus-lg"></i> Create Budget
                        </button>
                    </form>
                </div>
            </div>

            <!-- Current Budgets Section -->
            <div class="col-lg-8">
                <div class="table-card">
                    <div class="table-card-head" style="justify-content: space-between;">
                        <span style="display:flex;align-items:center;gap:8px;">
                            <i class="bi bi-list-ul"></i>
                            Current Budgets
                        </span>
                        <div style="position:relative;max-width:220px;width:100%;">
                            <i class="bi bi-search" style="position:absolute;left:10px;top:50%;transform:translateY(-50%);color:var(--d-muted);font-size:.85rem;pointer-events:none;"></i>
                            <input type="text" id="budgetSearch" placeholder="Search category..."
                                   style="width:100%;padding:7px 10px 7px 32px;border:1px solid var(--d-border);border-radius:6px;font-size:.85rem;color:var(--d-text);outline:none;"
                                   oninput="filterBudgets()" />
                        </div>
                    </div>
                    @if (budgets.Any())
                    {
                        <div class="table-responsive">
                            <table class="dash-table">
                                <thead>
                                    <tr>
                                        <th>Category</th>
                                        <th>Allocated</th>
                                        <th>Spent</th>
                                        <th>Remaining</th>
                                        <th>Usage</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody id="budgetTableBody">
                                    @foreach (var b in budgets)
                                    {
                                        var remaining = b.Allocated - b.Spent;
                                        var pct = b.Allocated == 0 ? 0 : (int)Math.Round((double)(b.Spent / b.Allocated * 100));
                                        var barClass = pct >= 100 ? "budget-bar-fill--danger" : pct >= 75 ? "budget-bar-fill--warn" : "budget-bar-fill--ok";
                                        <tr data-category="@b.Category.ToLower()">
                                            <td class="fw-600">@b.Category</td>
                                            <td>₱<strong>@b.Allocated.ToString("N2")</strong></td>
                                            <td>₱<strong>@b.Spent.ToString("N2")</strong></td>
                                            <td class="@(remaining < 0 ? "fw-bold" : "")">
                                                <span style="color: @(remaining < 0 ? "#ef4444" : "#0d8b7d");">₱@remaining.ToString("N2")</span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="budget-bar" style="flex: 1; min-width: 80px;">
                                                        <div class="budget-bar-fill @barClass" style="width:@Math.Min(pct, 100)%"></div>
                                                    </div>
                                                    <span style="font-weight: 600; font-size: 0.85rem;">@pct%</span>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="action-buttons">
                                                    <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editModal" onclick="loadBudgetData(@b.Id, '@b.Category', @b.Allocated.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture))">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <form method="post" asp-action="DeleteBudget" asp-controller="CEO" onsubmit="return confirm('Are you sure you want to delete this budget?');" style="display:inline-block;">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@b.Id" />
                                                        <button type="submit" class="btn btn-outline-danger">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tbody id="budgetEmptySearch" style="display:none;">
                                    <tr>
                                        <td colspan="6" style="text-align:center;padding:24px;color:var(--d-muted);font-size:.9rem;">
                                            <i class="bi bi-search me-2"></i>No categories match your search.
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- Budget Summary Cards -->
                        <div class="p-3 bg-light border-top" style="border-color: var(--d-border) !important;">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <div class="stat-card stat-card--primary">
                                        <div class="stat-label">Total Allocated</div>
                                        <div class="stat-value">₱@budgets.Sum(b => b.Allocated).ToString("N2")</div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="stat-card stat-card--warning">
                                        <div class="stat-label">Total Spent</div>
                                        <div class="stat-value">₱@budgets.Sum(b => b.Spent).ToString("N2")</div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="stat-card stat-card--success">
                                        <div class="stat-label">Total Remaining</div>
                                        <div class="stat-value">₱@budgets.Sum(b => b.Allocated - b.Spent).ToString("N2")</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-inbox"></i>
                            <p>No budgets created yet. Use the form to create your first budget.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Budget Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">
                    <i class="bi bi-pencil-square me-2"></i>Edit Budget
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-action="EditBudget" asp-controller="CEO" id="editForm">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="id" id="budgetId" />

                    <div class="mb-3">
                        <label for="categoryInput" class="form-label">
                            <i class="bi bi-tag me-2"></i>Category Name
                        </label>
                        <input type="text" class="form-control" id="categoryInput" name="category" placeholder="e.g., Fuel, Maintenance" required />
                    </div>

                    <div class="mb-3">
                        <label for="allocatedInput" class="form-label">
                            <i class="bi bi-cash-coin me-2"></i>Allocated Amount
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">₱</span>
                            <input type="number" step="0.01" class="form-control" id="allocatedInput" name="allocated" placeholder="0.00" min="0" required />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x me-1"></i>Cancel
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check2 me-1"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function loadBudgetData(id, category, allocated) {
        document.getElementById('budgetId').value = id;
        document.getElementById('categoryInput').value = category;
        document.getElementById('allocatedInput').value = allocated;
    }

    function filterBudgets() {
        var term = document.getElementById('budgetSearch').value.toLowerCase().trim().replace(/\s+/g, '');
        var rows = document.querySelectorAll('#budgetTableBody tr');
        var visible = 0;
        rows.forEach(function (row) {
            var cat = (row.getAttribute('data-category') || '').trim().replace(/\s+/g, '');
            var show = !term || cat.includes(term);
            row.style.display = show ? '' : 'none';
            if (show) visible++;
        });
        var empty = document.getElementById('budgetEmptySearch');
        if (empty) empty.style.display = visible === 0 ? '' : 'none';
    }
</script>

