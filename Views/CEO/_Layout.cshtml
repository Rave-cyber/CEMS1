<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CEMS CEO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-dark navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="CEO" asp-action="Dashboard">
                    🏢 <strong>CEMS</strong> <span class="badge bg-danger">CEO</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#ceoNavbar" aria-controls="ceoNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="ceoNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CEO" asp-action="Dashboard">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CEO" asp-action="Approvals">
                                <i class="bi bi-exclamation-triangle"></i> Over-Budget Reports
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CEO" asp-action="Budget">
                                <i class="bi bi-cash-stack"></i> Budget Management
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CEO" asp-action="ExpenseOverview">
                                <i class="bi bi-receipt"></i> Expense Overview
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CEO" asp-action="Analytics">
                                <i class="bi bi-bar-chart"></i> Reports &amp; Analytics
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CEO" asp-action="Users">
                                <i class="bi bi-people"></i> User Management
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                    <form class="d-flex ms-2" asp-area="Identity" asp-page="/Account/Logout" method="post">
                        <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - CEMS
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>