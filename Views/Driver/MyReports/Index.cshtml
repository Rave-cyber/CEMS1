@{
    ViewData["Title"] = "My Expense Reports";
    Layout = "~/Views/Shared/_DriverLayout.cshtml";
    var reports = ViewBag.Reports as List<CEMS.Models.ExpenseReport> ?? new List<CEMS.Models.ExpenseReport>();
    var budgets = ViewBag.Budgets as List<CEMS.Models.Budget> ?? new List<CEMS.Models.Budget>();
    var approvals = ViewBag.Approvals as List<CEMS.Models.Approval> ?? new List<CEMS.Models.Approval>();
    var page = (int)(ViewBag.Page ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 10);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var filterStatus = (string?)(ViewBag.FilterStatus ?? "");
}

<style>
    :root {
        --d-primary: #1a6bb5;
        --d-accent: #2ec4b6;
        --d-bg: #f7fbfc;
        --d-card: #ffffff;
        --d-border: #e9eef6;
        --d-text: #0f1724;
        --d-muted: #6b7280;
        --d-radius: 8px;
        --d-radius-sm: 6px;
        --d-danger: #ef4444;
        --d-warning: #f59e0b;
        --d-success: #10b981;
        --d-info: #6366f1;
    }

    .reports-wrapper {
        background: var(--d-bg);
        min-height: calc(100vh - 80px);
        padding: 28px 0 40px;
    }

    /* Header */
    .reports-header {
        margin-bottom: 28px;
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        flex-wrap: wrap;
        gap: 16px;
    }

    .reports-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--d-text);
        margin-bottom: 4px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .reports-title i {
            color: var(--d-primary);
        }

    .reports-subtitle {
        color: var(--d-muted);
        font-size: .92rem;
    }

    .header-controls {
        min-width: 160px;
        display: flex;
        align-items: center;
        justify-content: flex-end;
    }

    /* Report Card */
    .report-card {
        background: transparent;
        border: none;
        border-bottom: 1px solid var(--d-border);
        padding: 16px 0;
        margin-bottom: 8px;
        transition: background .15s, transform .15s;
    }

    .report-card:hover {
        background: rgba(0,0,0,0.02);
    }

    .report-card--overbudget {
        border-left: 4px solid var(--d-danger);
        background: rgba(220,38,38,0.02);
        padding-left: 12px;
    }

    /* Summary Card */
    .summary-card {
        background: var(--d-card);
        border: 1px solid var(--d-border);
        border-radius: var(--d-radius);
        padding: 16px;
        margin-bottom: 20px;
    }
    .summary-card h5 { margin: 0 0 8px 0; font-size: 1rem; }
    .summary-line { display:flex; justify-content:space-between; gap:12px; padding:8px 0; border-bottom:1px dashed var(--d-border); }
    .summary-line:last-child { border-bottom: none; }

    .report-card-header {
        padding: 18px 24px;
        background: #f8fafc;
        border-bottom: 1px solid var(--d-border);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 12px;
    }

    .report-card-info {
        display: flex;
        align-items: center;
        gap: 12px;
        flex-wrap: wrap;
    }

    .report-id {
        font-weight: 800;
        color: var(--d-text);
        font-size: 1.2rem;
        letter-spacing: 0.2px;
    }

    .report-date {
        color: var(--d-muted);
        font-size: .85rem;
        display: flex;
        align-items: center;
        gap: 4px;
    }

        .report-date i {
            font-size: .9rem;
        }

    .report-amount {
        font-weight: 800;
        color: var(--d-primary);
        font-size: 1.4rem;
        text-align: right;
        white-space: nowrap;
    }

    .report-card-actions {
        margin-left: auto;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 8px;
    }

    .edit-btn {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        border-radius: var(--d-radius-sm);
        background: rgba(26, 107, 181, .1);
        color: var(--d-primary);
        border: 1px solid rgba(26, 107, 181, .2);
        font-size: .82rem;
        font-weight: 600;
        text-decoration: none;
        transition: all .2s;
    }

    .edit-btn:hover {
        background: rgba(26, 107, 181, .18);
        color: #155a9a;
        text-decoration: none;
    }

    .report-card-body {
        padding: 0;
    }

    /* Status Badges */
    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 0;
        font-size: .9rem;
        font-weight: 600;
        white-space: nowrap;
        background: transparent;
        border: none;
    }

    .status-badge--pending {
        color: var(--d-primary);
    }

    .status-badge--approved {
        color: var(--d-accent);
    }

    .status-badge--rejected {
        color: var(--d-danger);
    }

    .status-badge--ceo {
        color: var(--d-primary);
    }

    .status-dot {
        width: 6px;
        height: 6px;
        border-radius: 50%;
    }

    .status-dot--pending {
        background: #f59e0b;
    }

    .status-dot--approved {
        background: #10b981;
    }

    .status-dot--rejected {
        background: #ef4444;
    }

    .status-dot--ceo {
        background: #6366f1;
    }

    /* Budget Flags */

    .budget-flag {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 0;
        font-size: .9rem;
        font-weight: 600;
        background: transparent;
        border: none;
    }

    .budget-flag--over {
        color: var(--d-danger);
    }

    .budget-flag--ok {
        color: var(--d-accent);
    }

    .reimbursed-badge {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 0;
        font-size: .9rem;
        font-weight: 600;
        background: transparent;
        color: var(--d-primary);
    }

    /* Items Table */
    .items-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        font-size: .9rem;
    }

        .items-table thead th {
            background: #f8fafc;
            color: var(--d-muted);
            font-weight: 600;
            font-size: .78rem;
            text-transform: uppercase;
            letter-spacing: .5px;
            padding: 14px 20px;
            border-bottom: 1px solid var(--d-border);
            text-align: left;
        }

        .items-table tbody td {
            padding: 16px 20px;
            border-bottom: 1px solid #f1f5f9;
            vertical-align: middle;
            color: var(--d-text);
        }

        .items-table tbody tr:last-child td {
            border-bottom: none;
        }

        .items-table tbody tr:hover {
            background: #f8fafc;
        }

        .items-table tbody tr.table-warning {
            background: rgba(245, 158, 11, .04);
        }

            .items-table tbody tr.table-warning:hover {
                background: rgba(245, 158, 11, .08);
            }

    /* Category Chip */
    .category-chip {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 0;
        border-radius: 6px;
        background: transparent;
        color: var(--d-text);
        font-size: .82rem;
        font-weight: 500;
    }

    .category-chip--over {
        background: rgba(239, 68, 68, .1);
        color: #dc2626;
    }

    /* View Button */
    .view-btn {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 14px;
        background: rgba(26, 107, 181, .08);
        color: var(--d-primary);
        border: 1px solid rgba(26, 107, 181, .2);
        border-radius: var(--d-radius-sm);
        font-size: .85rem;
        font-weight: 500;
        text-decoration: none;
        transition: all .2s;
    }

        .view-btn:hover {
            background: rgba(26, 107, 181, .12);
            color: #155a9a;
            text-decoration: none;
        }

    /* Approval Trail */
    .approval-trail {
        padding: 20px 24px;
        border-top: 1px solid var(--d-border);
    }

    .approval-trail-title {
        font-size: .9rem;
        font-weight: 600;
        color: var(--d-text);
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .approval-trail-title i {
            color: var(--d-text);
            display:none;
        }

    .approval-item {
        padding: 12px 0;
        border-bottom: 1px solid rgba(233, 238, 246, .5);
        display: flex;
        align-items: flex-start;
        gap: 12px;
    }

        .approval-item:last-child {
            border-bottom: none;
        }

    .approval-stage {
        flex: 0 0 80px;
        padding: 4px 10px;
        background: transparent;
        color: var(--d-text);
        border-radius: 4px;
        font-size: .8rem;
        font-weight: 500;
        text-align: center;
    }

    .approval-details {
        flex: 1;
    }

    .approval-status {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 3px 10px;
        border-radius: 4px;
        font-size: .8rem;
        font-weight: 500;
        margin-bottom: 4px;
    }

    .approval-status--approved { color: var(--d-accent); background: transparent; }
    .approval-status--rejected { color: var(--d-danger); background: transparent; }
    .approval-status--pending { color: var(--d-primary); background: transparent; }

    .approval-date {
        color: var(--d-muted);
        font-size: .8rem;
        margin-left: 8px;
    }

    .approval-remarks {
        color: var(--d-text);
        font-size: .85rem;
        font-style: italic;
        margin-top: 4px;
        padding-left: 8px;
        border-left: 2px solid var(--d-border);
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: var(--d-card);
        border: 1px solid var(--d-border);
        border-radius: var(--d-radius);
    }

    .empty-icon {
        font-size: 3rem;
        color: #cbd5e1;
        margin-bottom: 16px;
    }

    .empty-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 8px;
        color: var(--d-text);
    }

    .empty-text {
        font-size: .95rem;
        color: var(--d-muted);
        max-width: 400px;
        margin: 0 auto 20px;
    }

    .empty-action {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 24px;
        background: var(--d-primary);
        color: white;
        border: none;
        border-radius: var(--d-radius-sm);
        font-size: .9rem;
        font-weight: 600;
        text-decoration: none;
        transition: background .2s;
    }

        .empty-action:hover {
            background: #155a9a;
            color: white;
            text-decoration: none;
        }

    /* Status Indicator */
    .status-indicator {
        padding: 12px 20px;
        margin: 0 24px;
        border-bottom: 1px solid var(--d-border);
        color: var(--d-muted);
        font-size: .85rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .status-indicator i {
            color: var(--d-primary);
        }

    /* Controls Bottom */
    .controls-bottom {
        margin-top: 28px;
        padding: 8px 0;
        background: transparent;
        border: none;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 12px;
        flex-wrap: wrap;
    }

    .controls-filter {
        display: flex;
        align-items: center;
        gap: 12px;
        min-width: 250px;
    }

    .control-label {
        font-weight: 600;
        font-size: .9rem;
        color: var(--d-text);
        margin: 0;
        white-space: nowrap;
    }

    .controls-filter .form-select {
        min-width: 180px;
        border-color: var(--d-border);
    }

    .controls-pagination {
        margin: 0;
    }

    .controls-pagination .pagination {
        margin: 0;
    }

    .controls-pagination .page-link {
        color: var(--d-primary);
        border-color: var(--d-border);
        font-size: 1rem;
        padding: 8px 12px;
        min-width: 44px;
        display: inline-flex;
        justify-content: center;
        align-items: center;
        border-radius: 8px;
    }

    .controls-pagination .page-link:hover {
        background-color: rgba(0,102,204,0.08);
        color: var(--d-primary);
    }

    .controls-pagination .page-item.active .page-link {
        background-color: var(--d-primary);
        border-color: var(--d-primary);
        color: white;
        font-weight: 700;
    }

    .controls-pagination .page-num {
        font-size: 1.05rem;
        padding: 10px 14px;
    }

    @@media (max-width: 768px) {
        .controls-bottom {
            flex-direction: column;
            align-items: flex-start;
            gap: 16px;
        }

        .controls-filter {
            width: 100%;
            flex-direction: column;
        }

        .controls-filter .form-select {
            width: 100%;
        }

        .controls-pagination {
            width: 100%;
            display: flex;
            justify-content: center;
        }
    }

    @@media (max-width: 768px) {
        .reports-wrapper {
            padding: 20px 0 32px;
        }

        .reports-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 12px;
        }

        .report-card-header {
            padding: 16px 20px;
            flex-direction: column;
            align-items: flex-start;
            gap: 12px;
        }

        .report-card-info {
            flex-wrap: wrap;
        }

        .report-amount {
            margin-left: 0;
        }

        .items-table {
            font-size: .85rem;
        }

            .items-table thead th,
            .items-table tbody td {
                padding: 12px 16px;
            }

        .approval-trail {
            padding: 16px 20px;
        }
    }
</style>

<div class="reports-wrapper">
    <div class="container-fluid px-4">

        <!-- Header -->
        <div class="reports-header">
            <div>
                <h1 class="reports-title">My Expense Reports</h1>
                <p class="reports-subtitle">Track the status of all your submitted expense reports</p>
            </div>
            <div class="header-controls">
                <select id="statusFilter" class="form-select form-select-sm">
                    <option value="">All statuses</option>
                    @if (filterStatus == "Submitted") { <option value="Submitted" selected>Submitted</option> } else { <option value="Submitted">Submitted</option> }
                    @if (filterStatus == "PendingCEOApproval") { <option value="PendingCEOApproval" selected>Pending CEO</option> } else { <option value="PendingCEOApproval">Pending CEO</option> }
                    @if (filterStatus == "Approved") { <option value="Approved" selected>Approved</option> } else { <option value="Approved">Approved</option> }
                    @if (filterStatus == "Rejected") { <option value="Rejected" selected>Rejected</option> } else { <option value="Rejected">Rejected</option> }
                </select>
            </div>
        </div>

        @if (reports.Any())
        {
            @foreach (var r in reports)
            {
                var isOver = r.BudgetCheck == CEMS.Models.BudgetCheckStatus.OverBudget;
                var reportApprovals = approvals.Where(a => a.ReportId == r.Id).ToList();

                var statusClass = r.Status switch
                {
                    CEMS.Models.ReportStatus.Submitted => "status-badge--pending",
                    CEMS.Models.ReportStatus.Approved => "status-badge--approved",
                    CEMS.Models.ReportStatus.Rejected => "status-badge--rejected",
                    CEMS.Models.ReportStatus.PendingCEOApproval => "status-badge--ceo",
                    _ => ""
                };

                var dotClass = r.Status switch
                {
                    CEMS.Models.ReportStatus.Submitted => "status-dot--pending",
                    CEMS.Models.ReportStatus.Approved => "status-dot--approved",
                    CEMS.Models.ReportStatus.Rejected => "status-dot--rejected",
                    CEMS.Models.ReportStatus.PendingCEOApproval => "status-dot--ceo",
                    _ => ""
                };

                var statusLabel = r.Status switch
                {
                    CEMS.Models.ReportStatus.PendingCEOApproval => "Pending CEO Approval",
                    _ => r.Status.ToString()
                };

                <div class="report-card @(isOver ? "report-card--overbudget" : "")">
                    <!-- Report Header -->
                    <div class="report-card-header">
                        <div class="report-card-info">
                            <div class="report-id">Report #@r.Id</div>
                            <div class="report-date">
                                <i class="bi bi-calendar3"></i>
                                @r.SubmissionDate.ToLocalTime().ToString("MMM d, yyyy")
                            </div>
                            @if (r.TripStart.HasValue && r.TripEnd.HasValue)
                            {
                                <div class="report-date">
                                    Trip: @r.TripStart.Value.ToString("MMM d") – @r.TripEnd.Value.ToString("MMM d, yyyy")
                                    <span class="trip-days">
                                        @r.TripDays day@(r.TripDays != 1 ? "s" : "")
                                    </span>
                                </div>
                            }
                            <span class="status-badge @statusClass">@statusLabel</span>
                            @if (isOver)
                            {
                                <span class="budget-flag budget-flag--over">Over Budget</span>
                            }
                            else
                            {
                                <span class="budget-flag budget-flag--ok">Within Budget</span>
                            }
                            @if (r.Reimbursed)
                            {
                                <span class="reimbursed-badge">Reimbursed</span>
                            }
                        </div>
                        <div class="report-card-actions">
                            <div class="report-amount">₱@r.TotalAmount.ToString("N2")</div>
                            @if (r.Status != CEMS.Models.ReportStatus.Approved && r.Status != CEMS.Models.ReportStatus.PendingCEOApproval)
                            {
                                <button class="edit-btn" data-report-id="@r.Id" type="button" data-bs-toggle="modal" data-bs-target="#editReportModal">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </button>
                            }
                        </div>
                    </div>

                    <!-- Items Table -->
                    <div class="report-card-body">
                        @if (r.Items.Any())
                        {
                            <div class="table-responsive">
                                <table class="items-table">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Category</th>
                                            <th>Amount</th>
                                            <th>Budget Limit</th>
                                            <th>Description</th>
                                            <th>Receipt</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in r.Items)
                                        {
                                            var catBudget = budgets.FirstOrDefault(b => b.Category == item.Category);
                                            var catOver = catBudget != null && catBudget.Spent > catBudget.Allocated;
                                            <tr class="@(catOver ? "table-warning" : "")">
                                                <td>@item.Date.ToLocalTime().ToString("MMM d, yyyy")</td>
                                                <td>
                                                    <span class="category-chip @(catOver ? "category-chip--over" : "")">
                                @item.Category
                                                    </span>
                                                </td>
                                                <td class="fw-semibold">₱@item.Amount.ToString("N2")</td>
                                                <td>
                                                    @if (catBudget != null)
                                                    {
                                                        <div>
                                                            <span class="fw-medium">₱@catBudget.Allocated.ToString("N2")</span>
                                                            <small class="text-muted d-block">Spent: ₱@catBudget.Spent.ToString("N2")</small>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">No limit</span>
                                                    }
                                                </td>
                                                <td class="text-muted">@(item.Description ?? "—")</td>
                                                <td>
                                                    @if (item.ReceiptData != null && item.ReceiptData.Length > 0)
                                                    {
                                                        <a class="view-btn" target="_blank" href="@Url.Action("Receipt", "Driver", new { id = item.Id })">View</a>
                                                    }
                                                    else if (!string.IsNullOrEmpty(item.ReceiptPath))
                                                    {
                                                        <a class="view-btn" target="_blank" href="@item.ReceiptPath">View</a>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">—</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }

                        <!-- Status Indicator -->
                        @if (r.Status == CEMS.Models.ReportStatus.Submitted)
                        {
                            <div class="status-indicator">
                                <i class="bi bi-hourglass-split"></i>
                                Awaiting manager review...
                            </div>
                        }
                        else if (r.Status == CEMS.Models.ReportStatus.PendingCEOApproval)
                        {
                            <div class="status-indicator">
                                <i class="bi bi-arrow-up-right-circle"></i>
                                Manager approved — awaiting CEO approval for over-budget expense
                            </div>
                        }

                        <!-- Approval Trail -->
                        @if (reportApprovals.Any())
                        {
                            <div class="approval-trail">
                                <div class="approval-trail-title">
                                    <i class="bi bi-diagram-3"></i> Approval Trail
                                </div>
                                @foreach (var a in reportApprovals)
                                {
                                    var approvalStatusClass = a.Status switch
                                    {
                                        CEMS.Models.ApprovalStatus.Approved => "approval-status--approved",
                                        CEMS.Models.ApprovalStatus.Rejected => "approval-status--rejected",
                                        CEMS.Models.ApprovalStatus.Pending => "approval-status--pending",
                                        _ => ""
                                    };
                                    <div class="approval-item">
                                        <div class="approval-stage">@a.Stage</div>
                                        <div class="approval-details">
                                            <span class="approval-status @approvalStatusClass">@a.Status</span>
                                            @if (a.DecisionDate.HasValue)
                                            {
                                                <span class="approval-date">
                                                    @a.DecisionDate.Value.ToLocalTime().ToString("MMM d, yyyy")
                                                </span>
                                            }
                                            @if (!string.IsNullOrEmpty(a.Remarks))
                                            {
                                                <div class="approval-remarks">"@a.Remarks"</div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <!-- Empty State -->
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="bi bi-inbox"></i>
                </div>
                <h3 class="empty-title">No Reports Found</h3>
                <p class="empty-text">
                    You haven't submitted any expense reports yet. Submit your first expense to get started.
                </p>
                <a href="@Url.Action("Expenses", "Driver")" class="empty-action">
                    <i class="bi bi-plus-lg"></i> Submit Expenses
                </a>
            </div>
        }

        <!-- Controls: Filter + Pagination (Bottom) -->
        @if (reports.Any())
        {
            <div class="controls-bottom">
                @if (totalPages > 1)
                {
                    <nav aria-label="Report pages" class="controls-pagination w-100 d-flex justify-content-center">
                        <ul class="pagination mb-0">
                            <li class="page-item @(page == 1 ? "disabled" : "")">
                                <a class="page-link" href="?page=@(page-1)&pageSize=@pageSize&status=@filterStatus">Previous</a>
                            </li>
                            @for (int p = 1; p <= totalPages; p++)
                            {
                                <li class="page-item @(p == page ? "active" : "")"><a class="page-link" href="?page=@p&pageSize=@pageSize&status=@filterStatus">@p</a></li>
                            }
                            <li class="page-item @(page == totalPages ? "disabled" : "")">
                                <a class="page-link" href="?page=@(page+1)&pageSize=@pageSize&status=@filterStatus">Next</a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        }

    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function(){
        var statusEl = document.getElementById('statusFilter');
        if(statusEl) {
            statusEl.addEventListener('change', function(){
                var s = statusEl.value;
                var q = new URLSearchParams(window.location.search);
                if(s) q.set('status', s); else q.delete('status');
                q.set('page', '1');
                q.set('pageSize', '@pageSize');
                window.location.search = q.toString();
            });
        }
    });
</script>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

@* Antiforgery token for modal forms (render once and reuse) *@
<div id="antiforgeryToken" style="display:none">@Html.AntiForgeryToken()</div>

@* Edit Report Modal *@
<div class="modal fade" id="editReportModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Report</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="editModalBody">
                    <p class="text-muted">Loading...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button id="saveEditReport" type="button" class="btn btn-primary">Save &amp; Resubmit</button>
            </div>
        </div>
    </div>
</div>

<script>
    let currentEditReportId = null;

    async function loadReportToModal(id){
        currentEditReportId = id;
        const container = document.getElementById('editModalBody');
        container.innerHTML = '<p class="text-muted">Loading...</p>';
        try{
            const res = await fetch('@Url.Action("GetReport","Driver")/' + id);
            if(!res.ok) throw new Error('Failed to load report');
            const data = await res.json();

            // build simple form
            const tokenHtml = document.getElementById('antiforgeryToken') ? document.getElementById('antiforgeryToken').innerHTML : '';
            let html = `<form id="editReportForm" enctype="multipart/form-data">` + tokenHtml + `
                <div class="mb-3 p-3" style="background:rgba(26,107,181,.04);border:1px solid rgba(26,107,181,.15);border-radius:8px;">
                    <strong style="font-size:.88rem;"><i class="bi bi-signpost-2"></i> Trip Dates</strong>
                    <small class="text-muted d-block mb-2">Budget limits are prorated based on trip duration.</small>
                    <div class="d-flex gap-3 flex-wrap">
                        <div>
                            <label class="form-label" style="font-size:.82rem;">Trip Start</label>
                            <input class="form-control" name="TripStart" type="date" value="${data.tripStart || ''}" required />
                        </div>
                        <div>
                            <label class="form-label" style="font-size:.82rem;">Trip End</label>
                            <input class="form-control" name="TripEnd" type="date" value="${data.tripEnd || ''}" required />
                        </div>
                        <div class="d-flex align-items-end">
                            <span style="background:rgba(46,196,182,.12);color:#0d8b7d;border-radius:20px;padding:6px 14px;font-size:.82rem;font-weight:600;">
                                ${data.tripDays || 1} day(s)
                            </span>
                        </div>
                    </div>
                </div>
                <table class="table">
                    <thead><tr><th>Date</th><th>Category</th><th>Amount</th><th>Description</th><th>Receipt</th></tr></thead>
                    <tbody>`;
            for(let i=0;i<data.items.length;i++){
                const it = data.items[i];
                html += `<tr>
                    <td><input class="form-control" name="items[${i}].Date" type="date" value="${it.Date}" /></td>
                    <td><input class="form-control" name="items[${i}].Category" value="${it.Category}"/></td>
                    <td><input class="form-control" name="items[${i}].Amount" type="number" step="0.01" value="${it.Amount}"/></td>
                    <td><input class="form-control" name="items[${i}].Description" value="${it.Description || ''}"/></td>
                    <td><input class="form-control" name="items[${i}].Receipt" type="file" /></td>
                    <input type="hidden" name="items[${i}].Id" value="${it.Id}" />
                </tr>`;
            }
            html += `</tbody></table></form>`;
            container.innerHTML = html;

        }catch(e){
            container.innerHTML = '<div class="text-danger">Failed to load report.</div>';
            console.error(e);
        }
    }

    document.addEventListener('DOMContentLoaded', ()=>{
        document.querySelectorAll('.edit-btn').forEach(btn=>{
            btn.addEventListener('click', e=>{
                const id = btn.getAttribute('data-report-id');
                loadReportToModal(id);
            });
        });

        document.getElementById('saveEditReport')?.addEventListener('click', async ()=>{
            const form = document.getElementById('editReportForm');
            if(!form) return;
            const fd = new FormData(form);
            const url = '@Url.Action("EditReport","Driver")/' + currentEditReportId;
            try{
                const res = await fetch(url, { method: 'POST', body: fd, headers: { 'X-Requested-With': 'XMLHttpRequest' } });
                const data = await res.json();
                if(data.success){
                    location.reload();
                } else {
                    alert(data.message || 'Failed to save');
                }
            }catch(e){
                console.error(e);
                alert('Failed to save report');
            }
        });
    });
</script>
