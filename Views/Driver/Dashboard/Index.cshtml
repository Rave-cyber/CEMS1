@{
    ViewData["Title"] = "Driver Dashboard";
    Layout = "~/Views/Shared/_DriverLayout.cshtml";
}

<div class="container-fluid px-4">
    <!-- Dashboard Header -->
    <div class="d-flex justify-content-between align-items-center py-4">
        <div>
            <h1 class="h2 fw-bold">🚚 Driver Dashboard</h1>
            <p class="text-muted mb-0">Welcome, @User.Identity?.Name</p>
        </div>
        <div>
            <span class="badge bg-info fs-6 px-3 py-2">DRIVER</span>
        </div>
    </div>

    <!-- Driver Quick Stats -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-primary border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Pending</h6>
                            <h3 class="fw-bold">2</h3>
                            <p class="mb-0 text-muted">Expense Requests</p>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-clock text-primary fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-success border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Approved</h6>
                            <h3 class="fw-bold">₱5,400</h3>
                            <p class="mb-0 text-muted">This Month</p>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="bi bi-check-circle text-success fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-warning border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Reimbursed</h6>
                            <h3 class="fw-bold">₱4,200</h3>
                            <p class="mb-0 text-muted">Paid to you</p>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                            <i class="bi bi-cash text-warning fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-start border-danger border-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Rejected</h6>
                            <h3 class="fw-bold">₱800</h3>
                            <p class="mb-0 text-muted">Need revision</p>
                        </div>
                        <div class="bg-danger bg-opacity-10 p-3 rounded">
                            <i class="bi bi-x-circle text-danger fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Driver Quick Actions -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <h4 class="mb-3">⚡ Driver Actions</h4>
            <div class="row g-3">
                <div class="col-md-6">
                    <button type="button" class="card text-start text-decoration-none shadow-sm hover-shadow btn p-0 border-0 bg-transparent" data-bs-toggle="modal" data-bs-target="#submitExpenseModal">
                        <div class="card-body text-center py-4">
                            <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-plus-circle text-primary fs-2"></i>
                            </div>
                            <h5 class="card-title">Submit New Expense</h5>
                            <p class="card-text text-muted small">Fuel, Toll, Meal, Maintenance</p>
                        </div>
                    </button>
                </div>

                <div class="col-md-6">
                    <a href="@Url.Action("History", "Driver")" class="card text-decoration-none shadow-sm hover-shadow">
                        <div class="card-body text-center py-4">
                            <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                                <i class="bi bi-clock-history text-success fs-2"></i>
                            </div>
                            <h5 class="card-title">Expense History</h5>
                            <p class="card-text text-muted small">View all your submissions</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Submissions -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">📋 Your Recent Expense Submissions</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Amount</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Receipt</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var expense in ViewBag.RecentExpenses as List<CEMS.Models.Expense> ?? new List<CEMS.Models.Expense>())
                        {
                            <tr>
                                <td>@expense.Date.ToLocalTime().ToString("MMM d, yyyy")</td>
                                <td><span class="badge @(expense.Status == CEMS.Models.ExpenseStatus.Pending ? "bg-primary" : expense.Status == CEMS.Models.ExpenseStatus.Approved ? "bg-success" : "bg-danger")">@expense.Category</span></td>
                                <td>₱@expense.Amount</td>
                                <td>@expense.Description</td>
                                <td><span class="badge @(expense.Status == CEMS.Models.ExpenseStatus.Pending ? "bg-warning" : expense.Status == CEMS.Models.ExpenseStatus.Approved ? "bg-success" : "bg-danger")">@expense.Status</span></td>
                                <td>
                                    @if(expense.ReceiptData != null && expense.ReceiptData.Length > 0)
                                    {
                                        <a class="btn btn-sm btn-outline-primary" target="_blank" href="@Url.Action("Receipt", "Driver", new { id = expense.Id })">📄 View</a>
                                    }
                                    else if(!string.IsNullOrEmpty(expense.ReceiptPath))
                                    {
                                        <a class="btn btn-sm btn-outline-primary" target="_blank" href="@expense.ReceiptPath">📄 View</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<style>
    .hover-shadow:hover {
        transform: translateY(-2px);
        transition: all 0.3s ease;
    }
</style>

@* Render submit modal *@
@await Html.PartialAsync("_SubmitExpenseModal", new CEMS.Models.Expense())

@* TempData alerts *@
@if (TempData["Success"] != null)
{
    <div class="position-fixed bottom-0 end-0 m-4" style="z-index:1050;">
        <div class="alert alert-success">@TempData["Success"]</div>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="position-fixed bottom-0 end-0 m-4" style="z-index:1050;">
        <div class="alert alert-danger">@TempData["Error"]</div>
    </div>
}
