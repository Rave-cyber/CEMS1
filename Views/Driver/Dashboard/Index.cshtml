@{
    ViewData["Title"] = "Driver Dashboard";
    Layout = "~/Views/Shared/_DriverLayout.cshtml";
}

@section Scripts {
<script>
async function loadDriverMetrics(){
    try{
        const res = await fetch('@Url.Action("Metrics","Driver")');
        if(!res.ok) throw new Error('Failed to load metrics');
        const data = await res.json();

        document.getElementById('pendingCount').textContent = data.pendingCount ?? 0;
        document.getElementById('rejectedCount').textContent = data.rejectedCount ?? 0;
        document.getElementById('approvedTotal').textContent = (data.approvedTotal ?? 0).toFixed(2);
        document.getElementById('approvedThisMonthTotal').textContent = (data.approvedThisMonthTotal ?? 0).toFixed(2);

        const tbody = document.getElementById('recentItems');
        tbody.innerHTML = '';
        for(const item of data.recent || []){
            const tr = document.createElement('tr');
            tr.innerHTML = `
                <td>${new Date(item.date).toLocaleDateString()}</td>
                <td><span class="badge bg-primary">${item.category}</span></td>
                <td>₱${Number(item.amount).toFixed(2)}</td>
                <td>${item.description || ''}</td>
                <td><span class="badge bg-warning">${item.reportStatus}</span></td>
                <td>${item.receiptUrl ? `<a class="btn btn-sm btn-outline-primary" target="_blank" href="${item.receiptUrl}">📄 View</a>` : ''}</td>
            `;
            tbody.appendChild(tr);
        }
    }catch(e){
        console.error(e);
    }
}

document.addEventListener('DOMContentLoaded', ()=>{
    loadDriverMetrics();
});
</script>
}

<div class="container-fluid px-4">
    <!-- Dashboard Header -->
    <div class="d-flex justify-content-between align-items-center py-4">
        <div>
            <h1 class="h2 fw-bold">🚚 Driver Dashboard</h1>
            <p class="text-muted mb-0">Welcome, @User.Identity?.Name</p>
        </div>
        <div>
            <span class="badge bg-info fs-6 px-3 py-2">DRIVER</span>
        </div>
    </div>

    <!-- Driver Quick Stats -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <a href="@Url.Action("Expenses", "Driver")" class="text-decoration-none">
                <div class="card border-start border-primary border-4 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase text-muted mb-1">Pending</h6>
                                <h3 class="fw-bold"><span id="pendingCount">-</span></h3>
                                <p class="mb-0 text-muted">Expense Requests</p>
                            </div>
                            <div class="bg-primary bg-opacity-10 p-3 rounded">
                                <i class="bi bi-clock text-primary fs-3"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-xl-3 col-md-6">
            <a href="@Url.Action("History", "Driver")" class="text-decoration-none">
                <div class="card border-start border-success border-4 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase text-muted mb-1">Approved</h6>
                                <h3 class="fw-bold">₱<span id="approvedThisMonthTotal">0.00</span></h3>
                                <p class="mb-0 text-muted">This Month</p>
                            </div>
                            <div class="bg-success bg-opacity-10 p-3 rounded">
                                <i class="bi bi-check-circle text-success fs-3"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-xl-3 col-md-6">
            <a href="@Url.Action("History", "Driver")" class="text-decoration-none">
                <div class="card border-start border-warning border-4 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase text-muted mb-1">Reimbursed</h6>
                                <h3 class="fw-bold">₱<span id="approvedTotal">0.00</span></h3>
                                <p class="mb-0 text-muted">Approved Total</p>
                            </div>
                            <div class="bg-warning bg-opacity-10 p-3 rounded">
                                <i class="bi bi-cash text-warning fs-3"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-xl-3 col-md-6">
            <a href="@Url.Action("History", "Driver")" class="text-decoration-none">
                <div class="card border-start border-danger border-4 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase text-muted mb-1">Rejected</h6>
                                <h3 class="fw-bold"><span id="rejectedCount">-</span></h3>
                                <p class="mb-0 text-muted">Need revision</p>
                            </div>
                            <div class="bg-danger bg-opacity-10 p-3 rounded">
                                <i class="bi bi-x-circle text-danger fs-3"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

  
    <!-- Recent Submissions -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">📋 Your Recent Expense Submissions</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Amount</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Receipt</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tbody id="recentItems">
                            <!-- populated by JS -->
                        </tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<style>
    .hover-shadow:hover {
        transform: translateY(-2px);
        transition: all 0.3s ease;
    }
</style>

@* Render submit modal *@
@await Html.PartialAsync("_SubmitExpenseModal", new CEMS.Models.Expense())

@* TempData alerts *@
@if (TempData["Success"] != null)
{
    <div class="position-fixed bottom-0 end-0 m-4" style="z-index:1050;">
        <div class="alert alert-success">@TempData["Success"]</div>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="position-fixed bottom-0 end-0 m-4" style="z-index:1050;">
        <div class="alert alert-danger">@TempData["Error"]</div>
    </div>
}
