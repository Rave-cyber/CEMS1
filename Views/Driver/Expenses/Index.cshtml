                    <!-- Auto-dismiss confirmation toast -->
                    <div id="submitModal" class="submit-modal">
                        <div class="submit-modal-body">
                            <div class="submit-modal-icon"><i class="bi bi-check2-circle"></i></div>
                            <div id="submitModalText">Submitted successfully!</div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

            </div><!-- /col-lg-8 -->

            <div class="col-lg-4">
                <div class="receipt-sticky">
                    <div class="receipt-card">
                        <div class="receipt-head">
                            <i class="bi bi-receipt" style="font-size:1.35rem;"></i>
                            <div>
                                <div class="receipt-head-title">Expense Summary</div>
                                <div class="receipt-head-sub">Live preview</div>
                            </div>
                            <span id="receiptCount" class="receipt-count-badge ms-auto">0 items</span>
                        </div>
                        <div class="receipt-body">
                            <div class="receipt-store">
                                <div class="receipt-store-name">CEMS</div>
                                <div class="receipt-store-sub">Expense Report Draft</div>
                                <div class="receipt-store-sub" id="receiptDate"></div>
                            </div>

                            <div id="receiptItems" class="receipt-items"></div>

                            <div id="receiptEmpty" class="receipt-empty">
                                <i class="bi bi-receipt"></i>
                                <p>Fill in expense details<br>to see a summary</p>
                            </div>

                            <hr class="receipt-divider" />

                            <div class="receipt-subtotals">
                                <div class="receipt-subtotal-row">
                                    <span>Rows</span>
                                    <span id="receiptItemCount">0</span>
                                </div>
                                <div class="receipt-subtotal-row">
                                    <span>Subtotal</span>
                                    <span>&#8369;<span id="receiptSubtotal">0.00</span></span>
                                </div>
                            </div>

                            <div class="receipt-total-row">
                                <span class="receipt-total-label">Total</span>
                                <span class="receipt-total-amount">&#8369;<span id="receiptTotal">0.00</span></span>
                            </div>

                            <div class="receipt-footer">
                                <i class="bi bi-shield-check"></i> Pending submission<br>
                                Subject to management review
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- /col-lg-4 -->

        </div><!-- /row -->
    </div>
</div>

@section Scripts {
    <script>
        (function(){
            const rows = document.getElementById('expenseRows');
            const addBtn = document.getElementById('addRowBtn');
            const form = document.getElementById('multiExpenseForm');
            const submitBtn = document.getElementById('submitAllBtn');
            const resultDiv = document.getElementById('submitResult');
            const serverCategories = @Html.Raw(Model?.CategoriesJson ?? "[]");

            const tripStartInput = document.getElementById('tripStartInput');
            const tripEndInput   = document.getElementById('tripEndInput');
            const tripDaysCount  = document.getElementById('tripDaysCount');

            function getTodayDate() {
                const today = new Date();
                const year = today.getFullYear();
                const month = String(today.getMonth() + 1).padStart(2, '0');
                const day = String(today.getDate()).padStart(2, '0');
                return `${year}-${month}-${day}`;
            }

            // Initialize trip dates to today
            tripStartInput.value = getTodayDate();
            tripEndInput.value   = getTodayDate();

            function updateTripDays() {
                const s = tripStartInput.valueAsDate;
                const e = tripEndInput.valueAsDate;
                if (s && e && e >= s) {
                    const days = Math.max(1, Math.round((e - s) / 86400000) + 1);
                    tripDaysCount.textContent = days;
                } else {
                    tripDaysCount.textContent = '1';
                }
            }

            tripStartInput.addEventListener('change', () => {
                if (tripEndInput.value && tripEndInput.value < tripStartInput.value)
                    tripEndInput.value = tripStartInput.value;
                updateTripDays();
            });
            tripEndInput.addEventListener('change', () => {
                if (tripStartInput.value && tripEndInput.value < tripStartInput.value)
                    tripStartInput.value = tripEndInput.value;
                updateTripDays();
            });

            function populateCategories(select){
                if(!select) return;
                select.innerHTML = '<option value="">Select category</option>';
                serverCategories.forEach(c => {
                    const opt = document.createElement('option');
                    opt.value = c;
                    opt.textContent = c;
                    select.appendChild(opt);
                });
            }

            function addRow() {
                const idx = rows.children.length;
                const row = document.createElement('div');
                row.className = 'expense-row';

                const today = getTodayDate();

                row.innerHTML = `
                    <div class="field-group">
                        <label class="field-label">
                            <i class="bi bi-calendar3"></i> Date
                            <span class="required">*</span>
                        </label>
                        <input type="date" name="items[${idx}].Date" class="field-input" value="${today}" required />
                    </div>

                    <div class="field-group">
                        <label class="field-label">
                            <i class="bi bi-tag"></i> Category
                            <span class="required">*</span>
                        </label>
                        <select name="items[${idx}].Category" class="field-input" required>
                            <option value="">Select category</option>
                            <!-- categories populated from server -->
                        </select>
                    </div>

                    <div class="field-group">
                        <label class="field-label">
                            <i class="bi bi-currency-dollar"></i> Amount
                            <span class="required">*</span>
                        </label>
                        <input type="number" step="0.01" min="0" name="items[${idx}].Amount"
                               class="field-input" placeholder="0.00" required />
                    </div>

                    <div class="field-group">
                        <label class="field-label">
                            <i class="bi bi-card-text"></i> Description
                        </label>
                        <input type="text" name="items[${idx}].Description"
                               class="field-input" placeholder="Brief description or note" />
                    </div>

                    <div class="field-group">
                        <label class="field-label">
                            <i class="bi bi-paperclip"></i> Receipt (Optional)
                        </label>
                        <input type="file" name="items[${idx}].Receipt"
                               class="field-input" accept="image/*,.pdf,.doc,.docx" />
                        <small style="font-size: .75rem; color: var(--d-muted); margin-top: 4px;">
                            Images, PDF, or Word docs
                        </small>
                    </div>

                    <button type="button" class="remove-row-btn" title="Remove this row">
                        <i class="bi bi-trash"></i>
                    </button>
                `;

                rows.appendChild(row);

                const categorySelect = row.querySelector('select[name$=".Category"]');
                populateCategories(categorySelect);

                // Attach remove handler
                const removeBtn = row.querySelector('.remove-row-btn');
                removeBtn.addEventListener('click', () => {
                    if (rows.children.length > 1) {
                        row.remove();
                        reorderIndexes();
                        updateSummary();
                    } else {
                        alert('You need at least one expense item');
                    }
                });

                // Add focus styling
                const inputs = row.querySelectorAll('.field-input');
                inputs.forEach(input => {
                    input.addEventListener('focus', () => {
                        row.style.borderColor = 'var(--d-primary)';
                        row.style.boxShadow = '0 0 0 3px rgba(26, 107, 181, 0.1)';
                    });

                    input.addEventListener('blur', () => {
                        row.style.borderColor = 'var(--d-border)';
                        row.style.boxShadow = 'none';
                    });

                    input.addEventListener('input', updateSummary);
                    input.addEventListener('change', updateSummary);
                });

                updateSummary();
            }

            function reorderIndexes() {
                // Reindex names so model binding works when rows removed
                Array.from(rows.children).forEach((row, index) => {
                    const inputs = row.querySelectorAll('input, select');
                    inputs.forEach(input => {
                        if (input.name) {
                            input.name = input.name.replace(/items\[\d+\]/, `items[${index}]`);
                        }
                    });
                });
            }

            function updateSummary() {
                const allRows     = Array.from(rows.children);
                const itemsListEl = document.getElementById('receiptItems');
                const emptyEl     = document.getElementById('receiptEmpty');
                const totalEl     = document.getElementById('receiptTotal');
                const subtotalEl  = document.getElementById('receiptSubtotal');
                const countBadge  = document.getElementById('receiptCount');
                const itemCountEl = document.getElementById('receiptItemCount');
                const dateEl      = document.getElementById('receiptDate');

                if (dateEl) {
                    dateEl.textContent = new Date().toLocaleDateString('en-US', {
                        year: 'numeric', month: 'long', day: 'numeric'
                    });
                }

                const items = allRows.map((row, i) => ({
                    index : i + 1,
                    cat   : row.querySelector('select[name$=".Category"]')?.value || '',
                    amt   : parseFloat(row.querySelector('input[name$=".Amount"]')?.value) || 0,
                    desc  : (row.querySelector('input[name$=".Description"]')?.value || '').trim()
                }));

                const rowCount   = allRows.length;
                const total      = items.reduce((s, i) => s + i.amt, 0);
                const hasContent = items.some(i => i.cat || i.amt > 0);

                if (countBadge)  countBadge.textContent  = rowCount + ' item' + (rowCount !== 1 ? 's' : '');
                if (itemCountEl) itemCountEl.textContent = rowCount;

                if (!hasContent) {
                    if (itemsListEl) itemsListEl.innerHTML  = '';
                    if (emptyEl)     emptyEl.style.display  = 'block';
                    if (totalEl)     totalEl.textContent    = '0.00';
                    if (subtotalEl)  subtotalEl.textContent = '0.00';
                    return;
                }

                if (emptyEl) emptyEl.style.display = 'none';

                if (itemsListEl) {
                    itemsListEl.innerHTML = items.map(function(item) {
                        return '<div class="receipt-item-row">' +
                            '<div class="receipt-item-left">' +
                                '<div class="receipt-item-cat">' + (item.cat || 'Item ' + item.index) + '</div>' +
                                (item.desc ? '<div class="receipt-item-desc">' + item.desc + '</div>' : '') +
                            '</div>' +
                            '<div class="receipt-item-amount">\u20b1' + item.amt.toFixed(2) + '</div>' +
                        '</div>';
                    }).join('');
                }

                if (totalEl)    totalEl.textContent    = total.toFixed(2);
                if (subtotalEl) subtotalEl.textContent = total.toFixed(2);
            }

            function validateForm() {
                const rows = document.querySelectorAll('.expense-row');
                let isValid = true;
                const errors = [];

                // Validate trip dates
                if (!tripStartInput.value) {
                    errors.push('Trip Start date is required');
                    isValid = false;
                    tripStartInput.style.borderColor = 'var(--d-danger)';
                } else {
                    tripStartInput.style.borderColor = '';
                }
                if (!tripEndInput.value) {
                    errors.push('Trip End date is required');
                    isValid = false;
                    tripEndInput.style.borderColor = 'var(--d-danger)';
                } else {
                    tripEndInput.style.borderColor = '';
                }
                if (tripStartInput.value && tripEndInput.value && tripEndInput.value < tripStartInput.value) {
                    errors.push('Trip End must be on or after Trip Start');
                    isValid = false;
                    tripEndInput.style.borderColor = 'var(--d-danger)';
                }

                rows.forEach((row, index) => {
                    const dateInput = row.querySelector('input[name$=".Date"]');
                    const categorySelect = row.querySelector('select[name$=".Category"]');
                    const amountInput = row.querySelector('input[name$=".Amount"]');

                    if (!dateInput.value) {
                        errors.push(`Row ${index + 1}: Date is required`);
                        isValid = false;
                        dateInput.style.borderColor = 'var(--d-danger)';
                    } else {
                        dateInput.style.borderColor = '';
                    }

                    if (!categorySelect.value) {
                        errors.push(`Row ${index + 1}: Category is required`);
                        isValid = false;
                        categorySelect.style.borderColor = 'var(--d-danger)';
                    } else {
                        categorySelect.style.borderColor = '';
                    }

                    if (!amountInput.value || parseFloat(amountInput.value) <= 0) {
                        errors.push(`Row ${index + 1}: Amount must be greater than 0`);
                        isValid = false;
                        amountInput.style.borderColor = 'var(--d-danger)';
                    } else {
                        amountInput.style.borderColor = '';
                    }
                });

                return { isValid, errors };
            }

            // Event Listeners
            addBtn.addEventListener('click', addRow);

            // Submit form
            form.addEventListener('submit', async (e) => {
                e.preventDefault();

                // Validate form
                const validation = validateForm();
                if (!validation.isValid) {
                    resultDiv.innerHTML = `
                        <div class="result-error">
                            <strong>Please fix the following errors:</strong>
                            <ul style="margin: 8px 0 0 20px;">
                                ${validation.errors.map(err => `<li>${err}</li>`).join('')}
                            </ul>
                        </div>
                    `;
                    resultDiv.style.display = 'block';
                    return;
                }

                // Disable button and show loading
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Submitting...';

                try {
                    const formData = new FormData(form);

                    const response = await fetch('/Driver/SubmitMultiple', {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    });

                    const data = await response.json();

                    if (data.success) {
                        // Show the toast popup
                        const modal     = document.getElementById('submitModal');
                        const modalText = document.getElementById('submitModalText');
                        if (modalText) modalText.textContent = data.message || 'Submitted successfully!';
                        if (modal) modal.classList.add('show');

                        // Clear form and add one fresh row
                        rows.innerHTML = '';
                        addRow();

                        // Auto-dismiss after 1.5 s
                        setTimeout(() => {
                            if (modal) modal.classList.remove('show');
                        }, 1500);
                    } else {
                        // Show error message
                        resultDiv.innerHTML = `
                            <div class="result-error">
                                <strong>Error:</strong> ${data.errors || data.message || 'Submission failed. Please try again.'}
                            </div>
                        `;
                        resultDiv.style.display = 'block';
                    }
                } catch (error) {
                    console.error('Submission error:', error);
                    resultDiv.innerHTML = `
                        <div class="result-error">
                            <strong>Network Error:</strong> Unable to submit expenses. Please check your connection and try again.
                        </div>
                    `;
                    resultDiv.style.display = 'block';
                } finally {
                    // Re-enable button
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="bi bi-send-check"></i> Submit All';
                }
            });

            // Also handle click on submit button
            submitBtn.addEventListener('click', () => {
                form.dispatchEvent(new Event('submit', { cancelable: true, bubbles: true }));
            });

            // Initialize with one row
            addRow();

            // Populate category options from server-provided list

            // Add keyboard shortcuts
            document.addEventListener('keydown', (e) => {
                if (e.ctrlKey && e.key === 'Enter') {
                    e.preventDefault();
                    submitBtn.click();
                }

                if (e.ctrlKey && e.key === '+') {
                    e.preventDefault();
                    addBtn.click();
                }
            });
        })();
    </script>
