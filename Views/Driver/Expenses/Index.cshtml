@model CEMS.Models.DriverExpenseFormViewModel
@{
    ViewData["Title"] = "Submit Expenses";
    Layout = "~/Views/Shared/_DriverLayout.cshtml";
}

<style>
    :root {
        --d-primary: #1a6bb5;
        --d-accent: #2ec4b6;
        --d-bg: #f7fbfc;
        --d-card: #ffffff;
        --d-border: #e9eef6;
        --d-text: #0f1724;
        --d-muted: #6b7280;
        --d-radius: 8px;
        --d-radius-sm: 6px;
        --d-danger: #ef4444;
    }

    .expense-wrapper {
        background: var(--d-bg);
        min-height: calc(100vh - 80px);
        padding: 28px 0 40px;
    }

    /* Header */
    .expense-header {
        margin-bottom: 28px;
    }

    .expense-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--d-text);
        margin-bottom: 4px;
    }

    .expense-subtitle {
        color: var(--d-muted);
        font-size: .92rem;
    }

    /* Main Card */
    .expense-card {
        background: var(--d-card);
        border: 1px solid var(--d-border);
        border-radius: var(--d-radius);
        overflow: hidden;
        margin-bottom: 20px;
    }

    .expense-card-head {
        padding: 16px 24px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 1px solid var(--d-border);
    }

    .expense-card-title {
        font-size: 1rem;
        font-weight: 600;
        color: var(--d-text);
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .expense-card-title i {
            color: var(--d-primary);
            font-size: 1.1rem;
        }

    .expense-card-body {
        padding: 24px;
    }

    .expense-card-info {
        color: var(--d-muted);
        font-size: .9rem;
        margin-bottom: 20px;
        line-height: 1.5;
    }

    /* Action Buttons */
    .expense-actions {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .add-row-btn {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        color: var(--d-primary);
        text-decoration: none;
        font-weight: 500;
        font-size: .9rem;
        padding: 8px 16px;
        border-radius: var(--d-radius-sm);
        background: rgba(26, 107, 181, .08);
        border: 1px solid rgba(26, 107, 181, .2);
        transition: all .2s;
    }

        .add-row-btn:hover {
            background: rgba(26, 107, 181, .12);
            color: #155a9a;
            text-decoration: none;
        }

    .submit-all-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: var(--d-primary);
        color: white;
        border: none;
        border-radius: var(--d-radius-sm);
        padding: 10px 24px;
        font-size: .9rem;
        font-weight: 600;
        cursor: pointer;
        transition: background .2s;
    }

        .submit-all-btn:hover {
            background: #155a9a;
        }

        .submit-all-btn:disabled {
            background: #94a3b8;
            cursor: not-allowed;
        }

        .submit-all-btn:active:not(:disabled) {
            transform: translateY(1px);
        }

    /* Expense Rows */
    .expense-rows-container {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .expense-row {
        background: #f8fafc;
        border: 1px solid var(--d-border);
        border-radius: var(--d-radius);
        padding: 20px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        position: relative;
        transition: border-color .2s;
    }

        .expense-row:hover {
            border-color: var(--d-primary);
        }

    .field-group {
        display: flex;
        flex-direction: column;
    }

    .field-label {
        font-size: .82rem;
        font-weight: 600;
        color: var(--d-text);
        margin-bottom: 6px;
        display: flex;
        align-items: center;
        gap: 4px;
    }

        .field-label .required {
            color: var(--d-danger);
        }

    .field-input {
        width: 100%;
        padding: 10px 14px;
        border: 1px solid var(--d-border);
        border-radius: var(--d-radius-sm);
        background: #fff;
        font-size: .9rem;
        color: var(--d-text);
        transition: border-color .2s;
    }

        .field-input:focus {
            outline: none;
            border-color: var(--d-primary);
            box-shadow: 0 0 0 3px rgba(26, 107, 181, .1);
        }

        .field-input[type="file"] {
            padding: 8px;
            font-size: .85rem;
        }

            .field-input[type="file"]::-webkit-file-upload-button {
                background: rgba(26, 107, 181, .08);
                color: var(--d-primary);
                border: 1px solid rgba(26, 107, 181, .2);
                border-radius: 4px;
                padding: 6px 12px;
                font-size: .85rem;
                cursor: pointer;
                transition: background .2s;
            }

                .field-input[type="file"]::-webkit-file-upload-button:hover {
                    background: rgba(26, 107, 181, .12);
                }

    /* Remove Button */
    .remove-row-btn {
        position: absolute;
        top: 16px;
        right: 16px;
        background: none;
        border: none;
        color: var(--d-danger);
        cursor: pointer;
        padding: 4px;
        border-radius: 4px;
        transition: background .2s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .remove-row-btn:hover {
            background: rgba(239, 68, 68, .1);
        }

    /* Result Messages */
    .result-container {
        margin-top: 20px;
        padding: 16px;
        border-radius: var(--d-radius);
        font-size: .9rem;
        font-weight: 500;
    }

    .result-success {
        background: rgba(16, 185, 129, .1);
        color: #065f46;
        border: 1px solid rgba(16, 185, 129, .2);
    }

    .result-error {
        background: rgba(239, 68, 68, .1);
        color: #991b1b;
        border: 1px solid rgba(239, 68, 68, .2);
    }

    /* Category Select Styling */
    select.field-input option {
        padding: 8px;
        background: white;
    }

        select.field-input option:hover {
            background: rgba(26, 107, 181, .1);
        }

    /* Mobile Responsive */
    @@media (max-width: 992px) {
        .expense-row {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    @@media (max-width: 768px) {
        .expense-row {
            grid-template-columns: 1fr;
        }

        .expense-card-head {
            flex-direction: column;
            align-items: flex-start;
            gap: 12px;
        }

        .expense-actions {
            width: 100%;
            justify-content: space-between;
        }

        .expense-wrapper {
            padding: 20px 0 32px;
        }

        .expense-card-body {
            padding: 20px;
        }

        .trip-context-fields {
            flex-direction: column;
        }
    }

    /* Trip Context */
    .trip-context-card {
        background: rgba(26, 107, 181, .04);
        border: 1px solid rgba(26, 107, 181, .15);
        border-radius: var(--d-radius);
        padding: 18px 24px;
        margin-bottom: 20px;
    }
    .trip-context-title {
        font-size: .92rem;
        font-weight: 700;
        color: var(--d-text);
        margin-bottom: 4px;
        display: flex;
        align-items: center;
        gap: 6px;
    }
    .trip-context-sub {
        font-size: .8rem;
        color: var(--d-muted);
        margin-bottom: 14px;
    }
    .trip-context-fields {
        display: flex;
        gap: 16px;
        flex-wrap: wrap;
        align-items: flex-end;
    }
    .trip-context-fields .field-group {
        flex: 1;
        min-width: 160px;
    }
    .trip-days-badge {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        background: rgba(46, 196, 182, .12);
        color: #0d8b7d;
        border-radius: 20px;
        padding: 8px 16px;
        font-size: .85rem;
        font-weight: 600;
        white-space: nowrap;
        margin-bottom: 6px;
    }

    /* ── Receipt Summary Panel ── */
    .receipt-sticky {
        position: sticky;
        top: 20px;
    }
    .receipt-card {
        background: var(--d-card);
        border: 1px solid var(--d-border);
        border-radius: var(--d-radius);
        overflow: hidden;
        box-shadow: 0 2px 12px rgba(0,0,0,.05);
    }
    .receipt-head {
        background: var(--d-primary);
        color: #fff;
        padding: 14px 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    .receipt-head-title { font-size: 1rem; font-weight: 700; letter-spacing: .3px; }
    .receipt-head-sub   { font-size: .75rem; opacity: .75; margin-top: 1px; }
    .receipt-count-badge {
        display: inline-flex;
        align-items: center;
        background: rgba(255,255,255,.2);
        border-radius: 20px;
        padding: 3px 10px;
        font-size: .75rem;
        font-weight: 600;
        white-space: nowrap;
    }
    .receipt-body {
        padding: 18px 20px;
        font-size: .88rem;
    }
    .receipt-store {
        text-align: center;
        padding-bottom: 14px;
        margin-bottom: 14px;
        border-bottom: 2px dashed var(--d-border);
    }
    .receipt-store-name {
        font-size: 1rem;
        font-weight: 800;
        color: var(--d-text);
        letter-spacing: .5px;
        text-transform: uppercase;
    }
    .receipt-store-sub { font-size: .75rem; color: var(--d-muted); margin-top: 2px; }
    .receipt-items     { min-height: 40px; margin-bottom: 4px; }
    .receipt-item-row {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 8px;
        padding: 8px 0;
        border-bottom: 1px dotted #e5e7eb;
    }
    .receipt-item-row:last-child { border-bottom: none; }
    .receipt-item-left   { flex: 1; min-width: 0; }
    .receipt-item-cat    { font-weight: 600; color: var(--d-text); white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
    .receipt-item-desc   { font-size: .75rem; color: var(--d-muted); margin-top: 2px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
    .receipt-item-amount { font-weight: 700; color: var(--d-text); white-space: nowrap; }
    .receipt-empty {
        text-align: center;
        color: var(--d-muted);
        padding: 24px 0 8px;
    }
    .receipt-empty i { font-size: 2rem; opacity: .25; display: block; }
    .receipt-empty p { font-size: .82rem; margin-top: 8px; }
    .receipt-divider { border: none; border-top: 2px dashed var(--d-border); margin: 14px 0 10px; }
    .receipt-subtotals { margin-bottom: 4px; }
    .receipt-subtotal-row {
        display: flex;
        justify-content: space-between;
        font-size: .82rem;
        color: var(--d-muted);
        padding: 3px 0;
    }
    .receipt-total-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: rgba(26,107,181,.06);
        border: 1px solid rgba(26,107,181,.12);
        border-radius: 6px;
        padding: 10px 14px;
        margin-top: 10px;
    }
    .receipt-total-label  { font-size: .88rem; font-weight: 700; text-transform: uppercase; letter-spacing: .5px; color: var(--d-text); }
    .receipt-total-amount { font-size: 1.25rem; font-weight: 800; color: var(--d-primary); }
    .receipt-footer {
        text-align: center;
        padding-top: 14px;
        margin-top: 12px;
        border-top: 2px dashed var(--d-border);
        font-size: .74rem;
        color: var(--d-muted);
        line-height: 1.7;
    }
    @@media (max-width: 991px) {
        .receipt-sticky { position: static; margin-top: 4px; }
    }
    /* Small auto-dismiss confirmation toast */
    .submit-modal {
        position: fixed;
        right: 28px;
        bottom: 28px;
        background: #10b981;
        color: #fff;
        padding: 12px 18px;
        border-radius: 10px;
        box-shadow: 0 8px 32px rgba(16,185,129,.22);
        z-index: 1060;
        pointer-events: none;   /* invisible but in DOM so transition works */
        opacity: 0;
        transform: translateY(12px) scale(.96);
        transition: opacity .22s ease, transform .22s ease;
        font-size: .92rem;
        font-weight: 600;
        max-width: 320px;
    }
    .submit-modal.show {
        pointer-events: auto;
        opacity: 1;
        transform: translateY(0) scale(1);
    }
    .submit-modal-body { display: flex; align-items: center; gap: 10px; }
    .submit-modal-icon { font-size: 1.3rem; flex-shrink: 0; }
</style>

<div class="expense-wrapper">
    <div class="container-fluid px-4">

        <!-- Header -->
        <div class="expense-header">
            <h1 class="expense-title">Submit Expenses</h1>
            <p class="expense-subtitle">Add multiple expense items and submit them together</p>
        </div>

        <div class="row g-4 align-items-start">
            <div class="col-lg-8">

        <!-- Main Form Card -->
        <div class="expense-card">
            <div class="expense-card-head">
                <div class="expense-card-title">
                    <i class="bi bi-plus-circle"></i>
                    Multiple Expense Items
                </div>
                <div class="expense-actions">
                    <a id="addRowBtn" class="add-row-btn">
                        <i class="bi bi-plus-lg"></i> Add Row
                    </a>
                    <button id="submitAllBtn" class="submit-all-btn">
                        <i class="bi bi-send-check"></i> Submit All
                    </button>
                </div>
            </div>
            <div class="expense-card-body">
                <p class="expense-card-info">
                    Fill in the details for each expense item below. You can add multiple rows for different expenses.
                    Receipts are optional but recommended for better tracking.
                </p>

                <form id="multiExpenseForm" enctype="multipart/form-data">
                    <!-- Trip Context -->
                    <div class="trip-context-card">
                        <div class="trip-context-title">
                            <i class="bi bi-signpost-2"></i> Trip Details
                        </div>
                        <div class="trip-context-sub">
                            Provide the trip start and end dates. Budget limits are prorated based on trip duration for fair evaluation.
                        </div>
                        <div class="trip-context-fields">
                            <div class="field-group">
                                <label class="field-label">
                                    <i class="bi bi-calendar-event"></i> Trip Start
                                    <span class="required">*</span>
                                </label>
                                <input type="date" id="tripStartInput" name="TripStart" class="field-input" required />
                            </div>
                            <div class="field-group">
                                <label class="field-label">
                                    <i class="bi bi-calendar-check"></i> Trip End
                                    <span class="required">*</span>
                                </label>
                                <input type="date" id="tripEndInput" name="TripEnd" class="field-input" required />
                            </div>
                            <div class="field-group" style="flex:0 0 auto;">
                                <label class="field-label">&nbsp;</label>
                                <span id="tripDaysBadge" class="trip-days-badge">
                                    <i class="bi bi-clock-history"></i> <span id="tripDaysCount">1</span> day(s)
                                </span>
                            </div>
                        </div>
                    </div>

                    <div id="expenseRows" class="expense-rows-container">
