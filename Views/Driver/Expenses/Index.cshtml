@{
    ViewData["Title"] = "Submit Expenses";
    Layout = "~/Views/Shared/_DriverLayout.cshtml";
}

<style>
    :root {
        --d-primary: #1a6bb5;
        --d-accent: #2ec4b6;
        --d-bg: #f7fbfc;
        --d-card: #ffffff;
        --d-border: #e9eef6;
        --d-text: #0f1724;
        --d-muted: #6b7280;
        --d-radius: 8px;
        --d-radius-sm: 6px;
        --d-danger: #ef4444;
    }

    .expense-wrapper {
        background: var(--d-bg);
        min-height: calc(100vh - 80px);
        padding: 28px 0 40px;
    }

    /* Header */
    .expense-header {
        margin-bottom: 28px;
    }

    .expense-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--d-text);
        margin-bottom: 4px;
    }

    .expense-subtitle {
        color: var(--d-muted);
        font-size: .92rem;
    }

    /* Main Card */
    .expense-card {
        background: var(--d-card);
        border: 1px solid var(--d-border);
        border-radius: var(--d-radius);
        overflow: hidden;
        margin-bottom: 20px;
    }

    .expense-card-head {
        padding: 16px 24px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 1px solid var(--d-border);
    }

    .expense-card-title {
        font-size: 1rem;
        font-weight: 600;
        color: var(--d-text);
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .expense-card-title i {
            color: var(--d-primary);
            font-size: 1.1rem;
        }

    .expense-card-body {
        padding: 24px;
    }

    .expense-card-info {
        color: var(--d-muted);
        font-size: .9rem;
        margin-bottom: 20px;
        line-height: 1.5;
    }

    /* Action Buttons */
    .expense-actions {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .add-row-btn {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        color: var(--d-primary);
        text-decoration: none;
        font-weight: 500;
        font-size: .9rem;
        padding: 8px 16px;
        border-radius: var(--d-radius-sm);
        background: rgba(26, 107, 181, .08);
        border: 1px solid rgba(26, 107, 181, .2);
        transition: all .2s;
    }

        .add-row-btn:hover {
            background: rgba(26, 107, 181, .12);
            color: #155a9a;
            text-decoration: none;
        }

    .submit-all-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: var(--d-primary);
        color: white;
        border: none;
        border-radius: var(--d-radius-sm);
        padding: 10px 24px;
        font-size: .9rem;
        font-weight: 600;
        cursor: pointer;
        transition: background .2s;
    }

        .submit-all-btn:hover {
            background: #155a9a;
        }

        .submit-all-btn:disabled {
            background: #94a3b8;
            cursor: not-allowed;
        }

        .submit-all-btn:active:not(:disabled) {
            transform: translateY(1px);
        }

    /* Expense Rows */
    .expense-rows-container {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .expense-row {
        background: #f8fafc;
        border: 1px solid var(--d-border);
        border-radius: var(--d-radius);
        padding: 20px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        position: relative;
        transition: border-color .2s;
    }

        .expense-row:hover {
            border-color: var(--d-primary);
        }

    .field-group {
        display: flex;
        flex-direction: column;
    }

    .field-label {
        font-size: .82rem;
        font-weight: 600;
        color: var(--d-text);
        margin-bottom: 6px;
        display: flex;
        align-items: center;
        gap: 4px;
    }

        .field-label .required {
            color: var(--d-danger);
        }

    .field-input {
        width: 100%;
        padding: 10px 14px;
        border: 1px solid var(--d-border);
        border-radius: var(--d-radius-sm);
        background: #fff;
        font-size: .9rem;
        color: var(--d-text);
        transition: border-color .2s;
    }

        .field-input:focus {
            outline: none;
            border-color: var(--d-primary);
            box-shadow: 0 0 0 3px rgba(26, 107, 181, .1);
        }

        .field-input[type="file"] {
            padding: 8px;
            font-size: .85rem;
        }

            .field-input[type="file"]::-webkit-file-upload-button {
                background: rgba(26, 107, 181, .08);
                color: var(--d-primary);
                border: 1px solid rgba(26, 107, 181, .2);
                border-radius: 4px;
                padding: 6px 12px;
                font-size: .85rem;
                cursor: pointer;
                transition: background .2s;
            }

                .field-input[type="file"]::-webkit-file-upload-button:hover {
                    background: rgba(26, 107, 181, .12);
                }

    /* Remove Button */
    .remove-row-btn {
        position: absolute;
        top: 16px;
        right: 16px;
        background: none;
        border: none;
        color: var(--d-danger);
        cursor: pointer;
        padding: 4px;
        border-radius: 4px;
        transition: background .2s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .remove-row-btn:hover {
            background: rgba(239, 68, 68, .1);
        }

    /* Result Messages */
    .result-container {
        margin-top: 20px;
        padding: 16px;
        border-radius: var(--d-radius);
        font-size: .9rem;
        font-weight: 500;
    }

    .result-success {
        background: rgba(16, 185, 129, .1);
        color: #065f46;
        border: 1px solid rgba(16, 185, 129, .2);
    }

    .result-error {
        background: rgba(239, 68, 68, .1);
        color: #991b1b;
        border: 1px solid rgba(239, 68, 68, .2);
    }

    /* Category Select Styling */
    select.field-input option {
        padding: 8px;
        background: white;
    }

        select.field-input option:hover {
            background: rgba(26, 107, 181, .1);
        }

    /* Mobile Responsive */
    @@media (max-width: 992px) {
        .expense-row {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    @@media (max-width: 768px) {
        .expense-row {
            grid-template-columns: 1fr;
        }

        .expense-card-head {
            flex-direction: column;
            align-items: flex-start;
            gap: 12px;
        }

        .expense-actions {
            width: 100%;
            justify-content: space-between;
        }

        .expense-wrapper {
            padding: 20px 0 32px;
        }

        .expense-card-body {
            padding: 20px;
        }
    }
</style>

<div class="expense-wrapper">
    <div class="container-fluid px-4">

        <!-- Header -->
        <div class="expense-header">
            <h1 class="expense-title">Submit Expenses</h1>
            <p class="expense-subtitle">Add multiple expense items and submit them together</p>
        </div>

        <!-- Main Form Card -->
        <div class="expense-card">
            <div class="expense-card-head">
                <div class="expense-card-title">
                    <i class="bi bi-plus-circle"></i>
                    Multiple Expense Items
                </div>
                <div class="expense-actions">
                    <a id="addRowBtn" class="add-row-btn">
                        <i class="bi bi-plus-lg"></i> Add Row
                    </a>
                    <button id="submitAllBtn" class="submit-all-btn">
                        <i class="bi bi-send-check"></i> Submit All
                    </button>
                </div>
            </div>
            <div class="expense-card-body">
                <p class="expense-card-info">
                    Fill in the details for each expense item below. You can add multiple rows for different expenses.
                    Receipts are optional but recommended for better tracking.
                </p>

                <form id="multiExpenseForm" enctype="multipart/form-data">
                    <div id="expenseRows" class="expense-rows-container">
                        <!-- Rows will be added here dynamically -->
                    </div>

                    <div id="submitResult" class="result-container" style="display: none;"></div>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        (function(){
            const rows = document.getElementById('expenseRows');
            const addBtn = document.getElementById('addRowBtn');
            const form = document.getElementById('multiExpenseForm');
            const submitBtn = document.getElementById('submitAllBtn');
            const resultDiv = document.getElementById('submitResult');

            // Get today's date in YYYY-MM-DD format
            function getTodayDate() {
                const today = new Date();
                const year = today.getFullYear();
                const month = String(today.getMonth() + 1).padStart(2, '0');
                const day = String(today.getDate()).padStart(2, '0');
                return `${year}-${month}-${day}`;
            }

            function addRow() {
                const idx = rows.children.length;
                const row = document.createElement('div');
                row.className = 'expense-row';

                const today = getTodayDate();

                row.innerHTML = `
                    <div class="field-group">
                        <label class="field-label">
                            <i class="bi bi-calendar3"></i> Date
                            <span class="required">*</span>
                        </label>
                        <input type="date" name="items[${idx}].Date" class="field-input" value="${today}" required />
                    </div>

                    <div class="field-group">
                        <label class="field-label">
                            <i class="bi bi-tag"></i> Category
                            <span class="required">*</span>
                        </label>
                        <select name="items[${idx}].Category" class="field-input" required>
                            <option value="">Select category</option>
                            <option value="Fuel">Fuel</option>
                            <option value="Toll">Toll</option>
                            <option value="Meal">Meal</option>
                            <option value="Maintenance">Maintenance</option>
                            <option value="Parking">Parking</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div class="field-group">
                        <label class="field-label">
                            <i class="bi bi-currency-dollar"></i> Amount
                            <span class="required">*</span>
                        </label>
                        <input type="number" step="0.01" min="0" name="items[${idx}].Amount"
                               class="field-input" placeholder="0.00" required />
                    </div>

                    <div class="field-group">
                        <label class="field-label">
                            <i class="bi bi-card-text"></i> Description
                        </label>
                        <input type="text" name="items[${idx}].Description"
                               class="field-input" placeholder="Brief description or note" />
                    </div>

                    <div class="field-group">
                        <label class="field-label">
                            <i class="bi bi-paperclip"></i> Receipt (Optional)
                        </label>
                        <input type="file" name="items[${idx}].Receipt"
                               class="field-input" accept="image/*,.pdf,.doc,.docx" />
                        <small style="font-size: .75rem; color: var(--d-muted); margin-top: 4px;">
                            Images, PDF, or Word docs
                        </small>
                    </div>

                    <button type="button" class="remove-row-btn" title="Remove this row">
                        <i class="bi bi-trash"></i>
                    </button>
                `;

                rows.appendChild(row);

                // Attach remove handler
                const removeBtn = row.querySelector('.remove-row-btn');
                removeBtn.addEventListener('click', () => {
                    if (rows.children.length > 1) {
                        row.remove();
                        reorderIndexes();
                    } else {
                        alert('You need at least one expense item');
                    }
                });

                // Add focus styling
                const inputs = row.querySelectorAll('.field-input');
                inputs.forEach(input => {
                    input.addEventListener('focus', () => {
                        row.style.borderColor = 'var(--d-primary)';
                        row.style.boxShadow = '0 0 0 3px rgba(26, 107, 181, 0.1)';
                    });

                    input.addEventListener('blur', () => {
                        row.style.borderColor = 'var(--d-border)';
                        row.style.boxShadow = 'none';
                    });
                });
            }

            function reorderIndexes() {
                // Reindex names so model binding works when rows removed
                Array.from(rows.children).forEach((row, index) => {
                    const inputs = row.querySelectorAll('input, select');
                    inputs.forEach(input => {
                        if (input.name) {
                            input.name = input.name.replace(/items\[\d+\]/, `items[${index}]`);
                        }
                    });
                });
            }

            function validateForm() {
                const rows = document.querySelectorAll('.expense-row');
                let isValid = true;
                const errors = [];

                rows.forEach((row, index) => {
                    const dateInput = row.querySelector('input[name$=".Date"]');
                    const categorySelect = row.querySelector('select[name$=".Category"]');
                    const amountInput = row.querySelector('input[name$=".Amount"]');

                    if (!dateInput.value) {
                        errors.push(`Row ${index + 1}: Date is required`);
                        isValid = false;
                        dateInput.style.borderColor = 'var(--d-danger)';
                    } else {
                        dateInput.style.borderColor = '';
                    }

                    if (!categorySelect.value) {
                        errors.push(`Row ${index + 1}: Category is required`);
                        isValid = false;
                        categorySelect.style.borderColor = 'var(--d-danger)';
                    } else {
                        categorySelect.style.borderColor = '';
                    }

                    if (!amountInput.value || parseFloat(amountInput.value) <= 0) {
                        errors.push(`Row ${index + 1}: Amount must be greater than 0`);
                        isValid = false;
                        amountInput.style.borderColor = 'var(--d-danger)';
                    } else {
                        amountInput.style.borderColor = '';
                    }
                });

                return { isValid, errors };
            }

            // Event Listeners
            addBtn.addEventListener('click', addRow);

            // Submit form
            form.addEventListener('submit', async (e) => {
                e.preventDefault();

                // Validate form
                const validation = validateForm();
                if (!validation.isValid) {
                    resultDiv.innerHTML = `
                        <div class="result-error">
                            <strong>Please fix the following errors:</strong>
                            <ul style="margin: 8px 0 0 20px;">
                                ${validation.errors.map(err => `<li>${err}</li>`).join('')}
                            </ul>
                        </div>
                    `;
                    resultDiv.style.display = 'block';
                    return;
                }

                // Disable button and show loading
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Submitting...';

                try {
                    const formData = new FormData(form);

                    const response = await fetch('/Driver/SubmitMultiple', {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    });

                    const data = await response.json();

                    if (data.success) {
                        // Show success message
                        resultDiv.innerHTML = `<div class="result-success">${data.message}</div>`;
                        resultDiv.style.display = 'block';

                        // Clear form and add one fresh row
                        rows.innerHTML = '';
                        addRow();

                        // Scroll to result
                        resultDiv.scrollIntoView({ behavior: 'smooth' });

                        // Hide success message after 5 seconds
                        setTimeout(() => {
                            resultDiv.style.display = 'none';
                        }, 5000);
                    } else {
                        // Show error message
                        resultDiv.innerHTML = `
                            <div class="result-error">
                                <strong>Error:</strong> ${data.errors || data.message || 'Submission failed. Please try again.'}
                            </div>
                        `;
                        resultDiv.style.display = 'block';
                    }
                } catch (error) {
                    console.error('Submission error:', error);
                    resultDiv.innerHTML = `
                        <div class="result-error">
                            <strong>Network Error:</strong> Unable to submit expenses. Please check your connection and try again.
                        </div>
                    `;
                    resultDiv.style.display = 'block';
                } finally {
                    // Re-enable button
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="bi bi-send-check"></i> Submit All';
                }
            });

            // Also handle click on submit button
            submitBtn.addEventListener('click', () => {
                form.dispatchEvent(new Event('submit', { cancelable: true, bubbles: true }));
            });

            // Initialize with one row
            addRow();

            // Add keyboard shortcuts
            document.addEventListener('keydown', (e) => {
                if (e.ctrlKey && e.key === 'Enter') {
                    e.preventDefault();
                    submitBtn.click();
                }

                if (e.ctrlKey && e.key === '+') {
                    e.preventDefault();
                    addBtn.click();
                }
            });
        })();
    </script>
}

