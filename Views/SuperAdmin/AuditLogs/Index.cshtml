@{
    ViewData["Title"] = "Audit Logs";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";

    var logs = (List<CEMS.Models.AuditLog>)ViewBag.Logs;
    var logUsers = (Dictionary<string, string?>)ViewBag.LogUsers;
    var actions = (List<string>)ViewBag.Actions;
    var modules = (List<string>)ViewBag.Modules;
    var roles = (List<string>)ViewBag.Roles;

    var filterAction = ViewBag.FilterAction as string;
    var filterModule = ViewBag.FilterModule as string;
    var filterRole = ViewBag.FilterRole as string;
    var filterUser = ViewBag.FilterUser as string;
    var filterStart = ViewBag.FilterStart as DateTime?;
    var filterEnd = ViewBag.FilterEnd as DateTime?;
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int totalCount = ViewBag.TotalCount ?? 0;
}

<div class="page-wrapper">
    <div class="container-fluid px-4">
        <div class="page-header" style="margin-bottom: 16px;">
            <h1 class="page-title">
                <i class="bi bi-journal-text"></i>
                Audit Logs
            </h1>
            <p class="page-subtitle">@totalCount total record(s)</p>
        </div>

        <!-- Filters -->
        <div class="filter-card">
            <form method="get" asp-action="AuditLogs" class="row g-3 align-items-end">
                <div class="col-md-2">
                    <label class="form-label small fw-semibold">Search User</label>
                    <input type="text" name="user" class="form-control form-control-sm" placeholder="Email or username..." value="@filterUser" />
                </div>
                <div class="col-md-2">
                    <label class="form-label small fw-semibold">Role</label>
                    <select name="role" class="form-select form-select-sm">
                        <option value="">All Roles</option>
                        @foreach (var r in roles)
                        {
                            <option value="@r" selected="@(filterRole == r)">@r</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label small fw-semibold">Action</label>
                    <select name="actionType" class="form-select form-select-sm">
                        <option value="">All Actions</option>
                        @foreach (var a in actions)
                        {
                            <option value="@a" selected="@(filterAction == a)">@a</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label small fw-semibold">Module</label>
                    <select name="module" class="form-select form-select-sm">
                        <option value="">All Modules</option>
                        @foreach (var m in modules)
                        {
                            <option value="@m" selected="@(filterModule == m)">@m</option>
                        }
                    </select>
                </div>
                <div class="col-md-1">
                    <label class="form-label small fw-semibold">From</label>
                    <input type="date" name="start" class="form-control form-control-sm" value="@(filterStart?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-1">
                    <label class="form-label small fw-semibold">To</label>
                    <input type="date" name="end" class="form-control form-control-sm" value="@(filterEnd?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-2 d-flex gap-2">
                    <button type="submit" class="btn btn-primary btn-sm"><i class="bi bi-funnel"></i> Filter</button>
                    <a asp-action="AuditLogs" class="btn btn-outline-secondary btn-sm"><i class="bi bi-x-circle"></i> Clear</a>
                </div>
            </form>
        </div>

        <!-- Logs Table -->
        <div class="table-card">
            @if (logs.Count == 0)
            {
                <div class="empty-state">
                    <i class="bi bi-journal-x"></i>
                    <p class="empty-state-title">No audit logs found</p>
                    <p class="empty-state">Try adjusting your filters to see results</p>
                </div>
            }
            else
            {
                <table class="dash-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Action</th>
                            <th>Module</th>
                            <th>Role</th>
                            <th>Performed By</th>
                            <th>Target User</th>
                            <th>Record</th>
                            <th>Details</th>
                            <th>Timestamp</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in logs)
                        {
                            <tr>
                                <td>@log.Id</td>
                                <td><span style="color: #0f1724; font-weight: 600; font-size: 0.9rem;">@log.Action</span></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(log.Module))
                                    {
                                        <span style="color: #0f1724; font-weight: 600; font-size: 0.9rem;">@log.Module</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(log.Role))
                                        {
                                            <small class="fw-semibold">@log.Role</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td>
                                        @if (log.PerformedByUserId != null && logUsers.ContainsKey(log.PerformedByUserId))
                                        {
                                            @logUsers[log.PerformedByUserId]
                                        }
                                        else
                                        {
                                            <span class="text-muted">System</span>
                                        }
                                    </td>
                                    <td>
                                        @if (log.TargetUserId != null && logUsers.ContainsKey(log.TargetUserId))
                                        {
                                            @logUsers[log.TargetUserId]
                                        }
                                        else if (log.TargetUserId != null)
                                        {
                                            <span class="text-muted">@log.TargetUserId</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td>
                                        @if (log.RelatedRecordId.HasValue)
                                        {
                                            <code>#@log.RelatedRecordId</code>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td><small>@log.Details</small></td>
                                    <td><small>@log.Timestamp.ToString("MMM dd, yyyy hh:mm tt")</small></td>
                                </tr>
                            }
                    </tbody>
                </table>


                <!-- Pagination -->
                @if (totalPages > 1)
                {
                    <div class=\"d-flex justify-content-between align-items-center px-3 py-3 border-top\">
                        <small class=\"text-muted\">Page @currentPage of @totalPages (@totalCount records)</small>
                        <nav>
                            <ul class=\"pagination pagination-sm mb-0\">
                                @if (currentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="AuditLogs" asp-route-page="@(currentPage - 1)" asp-route-actionType="@filterAction" asp-route-module="@filterModule" asp-route-role="@filterRole" asp-route-user="@filterUser" asp-route-start="@(filterStart?.ToString("yyyy-MM-dd"))" asp-route-end="@(filterEnd?.ToString("yyyy-MM-dd"))">‹</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled"><span class="page-link">‹</span></li>
                                }

                                @{
                                    int startPage = Math.Max(1, currentPage - 2);
                                    int endPage = Math.Min(totalPages, startPage + 4);
                                    startPage = Math.Max(1, endPage - 4);
                                }
                                @for (int i = startPage; i <= endPage; i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        @if (i == currentPage)
                                        {
                                            <span class="page-link">@i</span>
                                        }
                                        else
                                        {
                                            <a class="page-link" asp-action="AuditLogs" asp-route-page="@i" asp-route-actionType="@filterAction" asp-route-module="@filterModule" asp-route-role="@filterRole" asp-route-user="@filterUser" asp-route-start="@(filterStart?.ToString("yyyy-MM-dd"))" asp-route-end="@(filterEnd?.ToString("yyyy-MM-dd"))">@i</a>
                                        }
                                    </li>
                                }

                                @if (currentPage < totalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="AuditLogs" asp-route-page="@(currentPage + 1)" asp-route-actionType="@filterAction" asp-route-module="@filterModule" asp-route-role="@filterRole" asp-route-user="@filterUser" asp-route-start="@(filterStart?.ToString("yyyy-MM-dd"))" asp-route-end="@(filterEnd?.ToString("yyyy-MM-dd"))">›</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled"><span class="page-link">›</span></li>
                                }
                            </ul>
                        </nav>
                    </div>
                }
            }
        </div>
    </div>
</div>
